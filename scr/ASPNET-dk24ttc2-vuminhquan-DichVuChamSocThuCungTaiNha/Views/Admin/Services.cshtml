@model IEnumerable<WebThuCungNew.Models.Service>

@{
    ViewData["Title"] = "Quản Lý Dịch Vụ";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gradient">Quản Lý Dịch Vụ</h2>
        <a asp-action="CreateService" class="btn btn-primary shadow-sm">+ Dịch Vụ Mới</a>
    </div>
    
    <div class="card glass-card border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Hình Ảnh</th>
                            <th>Tên Dịch Vụ</th>
                            <th>Mô Tả</th>
                            <th>Giá</th>
                            <th class="text-end pe-4">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="@item.ImageUrl" alt="@item.ServiceName" class="rounded" style="width: 50px; height: 50px; object-fit: cover;" />
                                </td>
                                <td class="fw-bold">@item.ServiceName</td>
                                <td>@item.Description</td>
                                <td class="fw-bold text-primary">@item.Price.ToString("N0") VNĐ</td>
                                <td class="text-end pe-4">
                                    <a asp-action="EditService" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning me-1">Sửa</a>
                                    <a asp-action="DeleteService" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
