@model IEnumerable<WebThuCungNew.Models.Booking>

@{
    ViewData["Title"] = "Lịch Sử Đặt Lịch";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gradient">Lịch Sử Đặt Lịch</h2>
        <a asp-action="Index" class="btn btn-primary shadow-sm">Đặt Dịch Vụ Mới</a>
    </div>
    
    <div class="card glass-card border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Dịch Vụ</th>
                            <th>Thú Cưng</th>
                            <th>Ngày Giờ</th>
                            <th>Địa Điểm</th>
                            <th>Giá</th>
                            <th>Trạng Thái</th>
                            <th class="text-end pe-4">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Service.ServiceName</td>
                                <td>@item.Pet.Name</td>
                                <td>@item.BookingDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.Location</td>
                                <td class="fw-bold text-primary">@item.TotalPrice.ToString("N0") VNĐ</td>
                                <td>
                                    <span class="badge rounded-pill bg-@(item.Status == "Pending" ? "warning" : item.Status == "Confirmed" ? "primary" : item.Status == "Completed" ? "success" : "danger")">
                                        @(item.Status == "Pending" ? "Đang Chờ" : item.Status == "Confirmed" ? "Đã Xác Nhận" : item.Status == "Completed" ? "Hoàn Thành" : "Đã Hủy")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (item.Status == "Pending")
                                    {
                                        <a asp-action="Cancel" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger shadow-sm" onclick="return confirm('Bạn có chắc muốn hủy đơn này?');">Hủy</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
