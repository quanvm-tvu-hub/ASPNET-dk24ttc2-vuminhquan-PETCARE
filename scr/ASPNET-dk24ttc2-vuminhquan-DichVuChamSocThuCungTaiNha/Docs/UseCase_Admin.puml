@startuml
title Use Case Diagram - Quản Trị Viên

skinparam linetype ortho

actor "Khách" as Guest
actor "Người Dùng" as User
actor "Admin" as Admin

' Kế thừa
User --|> Guest
Admin --|> User

rectangle "Hệ Thống Quản Trị Minh Quân Pet Service" {
  
  (Đăng Nhập) as UC1
  
  package "Quản Lý Người Dùng" {
    (Xem Người Dùng) as UC2
    (Thêm Người Dùng) as UC3
    (Sửa Người Dùng) as UC4
    (Xóa Người Dùng) as UC5
  }
  
  package "Quản Lý Dịch Vụ" {
    (Xem Dịch Vụ) as UC6
    (Thêm Dịch Vụ) as UC7
    (Sửa Dịch Vụ) as UC8
    (Xóa Dịch Vụ) as UC9
  }
  
  package "Quản Lý Đặt Lịch" {
    (Xem Đặt Lịch) as UC10
    (Phân Công Nhân Viên) as UC11
    (Xác Nhận Đơn) as UC12
    (Hủy Đơn) as UC13
  }
  
  package "Báo Cáo" {
    (Xem Doanh Thu) as UC14
    (Xem Thống Kê) as UC15
  }
}

