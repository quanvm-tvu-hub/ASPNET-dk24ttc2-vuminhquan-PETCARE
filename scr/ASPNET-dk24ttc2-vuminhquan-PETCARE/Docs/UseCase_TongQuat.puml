@startuml UseCase_TongQuat
!theme plain
skinparam actorStyle awesome
skinparam packageStyle rectangle

title Sơ Đồ Use Case Tổng Quát - Website Thú Cưng Bento

actor "Khách" as Guest
actor "Khách Hàng" as Customer
actor "Admin" as Admin

rectangle "Hệ Thống Website Thú Cưng Bento" {
    
    package "Chức năng công khai" {
        usecase "Xem trang chủ" as UC1
        usecase "Xem sản phẩm" as UC2
        usecase "Tìm kiếm sản phẩm" as UC3
        usecase "Xem chi tiết sản phẩm" as UC4
        usecase "Lọc theo loại/thương hiệu" as UC5
        usecase "Xem dịch vụ thú cưng" as UC6
        usecase "Liên hệ" as UC7
    }
    
    package "Chức năng khách hàng" {
        usecase "Đăng ký/Đăng nhập" as UC8
        usecase "Quản lý tài khoản" as UC9
        usecase "Quản lý giỏ hàng" as UC10
        usecase "Đặt hàng" as UC11
        usecase "Theo dõi đơn hàng" as UC12
        usecase "Đăng ký dịch vụ" as UC13
    }
    
    package "Chức năng quản trị" {
        usecase "Quản lý Dashboard" as UC14
        usecase "Quản lý sản phẩm" as UC15
        usecase "Quản lý kho hàng" as UC16
        usecase "Quản lý đơn hàng" as UC17
        usecase "Quản lý dịch vụ" as UC18
        usecase "Quản lý người dùng" as UC19
        usecase "Thống kê & Báo cáo" as UC20
    }
}

' Guest relationships
Guest --> UC1
Guest --> UC2
Guest --> UC3
Guest --> UC4
Guest --> UC5
Guest --> UC6
Guest --> UC7

' Customer inherits from Guest
Customer --|> Guest
Customer --> UC8
Customer --> UC9
Customer --> UC10
Customer --> UC11
Customer --> UC12
Customer --> UC13

' Admin relationships
Admin --> UC14
Admin --> UC15
Admin --> UC16
Admin --> UC17
Admin --> UC18
Admin --> UC19
Admin --> UC20

@enduml
