@model IEnumerable<WebsiteThuCungBento.Models.CHUCNANG_QUYEN>
@{
    ViewBag.Title = "Danh Sách Chức Năng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white p-4 border-0 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                    <i class="fa-solid fa-list-check fa-2x"></i>
                </div>
                <div>
                    <h3 class="fw-bold mb-1">Danh Sách Chức Năng</h3>
                    <p class="mb-0 opacity-75">Quản lý các chức năng phân quyền trong hệ thống</p>
                </div>
            </div>
            <a href="@Url.Action("CreateCN", "AdminPQ")" class="btn btn-light text-primary fw-bold rounded-pill px-4 shadow-sm hover-scale">
                <i class="fa-solid fa-plus me-2"></i>Thêm Chức Năng
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase fw-bold small" style="width: 200px;">Mã Chức Năng</th>
                            <th class="py-3 text-secondary text-uppercase fw-bold small">Tên Chức Năng</th>
                            <th class="py-3 pe-4 text-end text-secondary text-uppercase fw-bold small" style="width: 200px;">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3">
                                        @Html.DisplayFor(modelItem => item.MACHUCNANG)
                                    </span>
                                </td>
                                <td class="fw-medium text-dark">
                                    @Html.DisplayFor(modelItem => item.TENCN)
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="@Url.Action("EditCN", "AdminPQ", new { id = item.MACHUCNANG })" class="btn btn-outline-primary btn-sm rounded-pill" title="Chỉnh sửa">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a href="@Url.Action("DeleteCN", "AdminPQ", new { id = item.MACHUCNANG })" class="btn btn-outline-danger btn-sm rounded-pill" title="Xóa">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top p-3">
            <div class="small text-muted">
                Hiển thị @Model.Count() chức năng
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }

    .bg-primary-subtle {
        background-color: rgba(13, 110, 253, 0.1);
    }
    
    .border-primary-subtle {
        border-color: rgba(13, 110, 253, 0.2) !important;
    }
</style>
