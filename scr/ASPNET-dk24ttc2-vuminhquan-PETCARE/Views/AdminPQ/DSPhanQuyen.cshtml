@model IEnumerable<WebsiteThuCungBento.Models.ADMIN>

@{
    ViewBag.Title = "Phân quyền";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h3 class="mb-0 fw-bold">
                <i class="fa-solid fa-user-lock text-primary me-2"></i>
                Quản Lý Phân Quyền
            </h3>
            <p class="text-muted mb-0">Quản lý quyền truy cập của quản trị viên</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("DSChucNang", "AdminPQ")" class="btn btn-outline-primary me-2">
                <i class="fa-solid fa-list-check me-2"></i>
                Danh sách chức năng
            </a>
            <a href="@Url.Action("Create", "AdminPQ")" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i>
                Thêm phân quyền
            </a>
        </div>
    </div>

    <!-- Permissions Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 80px;" class="text-center">
                                        <i class="fa-solid fa-hashtag"></i>
                                    </th>
                                    <th style="width: 100px;" class="text-center">Avatar</th>
                                    <th>Họ và tên</th>
                                    <th>Loại tài khoản</th>
                                    <th class="text-center" style="width: 150px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <span class="badge bg-light text-dark">@index</span>
                                        </td>
                                        <td class="text-center">
                                            <img src="@Url.Content("~/img/" + item.AVATAR)" 
                                                 alt="@item.HOTEN"
                                                 class="rounded-circle"
                                                 style="width: 50px; height: 50px; object-fit: cover; border: 2px solid #f1f5f9;">
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <strong>@item.HOTEN</strong>
                                                <small class="text-muted">
                                                    <i class="fa-solid fa-at me-1"></i>@item.TENDN
                                                </small>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.TENLOAI == "Admin")
                                            {
                                                <span class="badge bg-danger-subtle text-danger">
                                                    <i class="fa-solid fa-crown me-1"></i>
                                                    @item.TENLOAI
                                                </span>
                                            }
                                            else if (item.TENLOAI == "Manager")
                                            {
                                                <span class="badge bg-warning-subtle text-warning">
                                                    <i class="fa-solid fa-user-tie me-1"></i>
                                                    @item.TENLOAI
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info-subtle text-info">
                                                    <i class="fa-solid fa-user me-1"></i>
                                                    @item.TENLOAI
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a href="@Url.Action("ChiTietDSPhanQuyen", "AdminPQ", new { id = item.MAADMIN })" 
                                               class="btn btn-sm btn-outline-primary"
                                               title="Xem chi tiết quyền">
                                                <i class="fa-solid fa-eye me-1"></i>
                                                Chi tiết
                                            </a>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Footer with stats -->
                <div class="card-footer bg-light">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="stat-item">
                                <i class="fa-solid fa-users fa-2x text-primary mb-2"></i>
                                <h4 class="mb-0 fw-bold">@Model.Count()</h4>
                                <small class="text-muted">Tổng quản trị viên</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <i class="fa-solid fa-crown fa-2x text-danger mb-2"></i>
                                <h4 class="mb-0 fw-bold">@Model.Count(x => x.TENLOAI == "Admin")</h4>
                                <small class="text-muted">Admin</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-item">
                                <i class="fa-solid fa-user-tie fa-2x text-warning mb-2"></i>
                                <h4 class="mb-0 fw-bold">@Model.Count(x => x.TENLOAI != "Admin")</h4>
                                <small class="text-muted">Nhân viên</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Cards -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border-0 bg-primary-subtle">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-box bg-primary text-white me-3">
                            <i class="fa-solid fa-shield-halved"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Bảo mật cao</h6>
                            <small class="text-muted">Hệ thống phân quyền chi tiết</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-success-subtle">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-box bg-success text-white me-3">
                            <i class="fa-solid fa-check-double"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Quản lý dễ dàng</h6>
                            <small class="text-muted">Giao diện trực quan, dễ sử dụng</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 bg-warning-subtle">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-box bg-warning text-white me-3">
                            <i class="fa-solid fa-history"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Theo dõi hoạt động</h6>
                            <small class="text-muted">Lịch sử thay đổi quyền</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        color: #64748b;
        border-bottom: 2px solid #e2e8f0;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background-color: #f8fafc;
        transform: scale(1.01);
    }

    .stat-item {
        padding: 1rem;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .bg-primary-subtle {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .bg-success-subtle {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .bg-warning-subtle {
        background-color: rgba(255, 193, 7, 0.1);
    }

    .bg-danger-subtle {
        background-color: rgba(220, 53, 69, 0.1);
    }

    .bg-info-subtle {
        background-color: rgba(13, 202, 240, 0.1);
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-info {
        color: #0dcaf0 !important;
    }
</style>
