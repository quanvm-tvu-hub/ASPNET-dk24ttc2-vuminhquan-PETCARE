@model WebsiteThuCungBento.Models.THUONGHIEU

@{
    ViewBag.Title = "Xóa Thương Hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-triangle-exclamation fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Xóa Thương Hiệu</h3>
                            <p class="mb-0 opacity-75">Bạn có chắc chắn muốn xóa thương hiệu này không? Hành động này không thể hoàn tác.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 text-center">
                    <div class="alert alert-light border-danger border-start border-4 mb-4 text-start">
                        <div class="d-flex">
                            <i class="fa-solid fa-circle-info text-danger mt-1 me-3"></i>
                            <div>
                                <h6 class="fw-bold text-danger">Lưu ý quan trọng</h6>
                                <p class="mb-0 text-muted small">Việc xóa thương hiệu có thể ảnh hưởng đến các sản phẩm thuộc thương hiệu này. Hãy đảm bảo không còn sản phẩm nào liên kết trước khi xóa.</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-inline-block p-3 bg-light rounded-4 shadow-sm border">
                            <img src="@Url.Content("~/img/" + Model.LOGO)" 
                                 class="img-fluid object-fit-contain" 
                                 style="max-width: 150px; max-height: 150px;" 
                                 alt="@Model.TENTH" 
                                 onerror="this.src='https://placehold.co/150x150?text=No+Logo'" />
                        </div>
                    </div>

                    <h3 class="fw-bold text-dark mb-2">@Model.TENTH</h3>
                    <p class="text-muted mb-4">Mã thương hiệu: @Model.MATH</p>

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-center gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("Index", "ThuongHieu")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-trash-can me-2"></i>Xác nhận xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
