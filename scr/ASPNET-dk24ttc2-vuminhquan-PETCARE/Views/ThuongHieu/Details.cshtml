@model WebsiteThuCungBento.Models.THUONGHIEU

@{
    ViewBag.Title = "Chi Tiết Thương Hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-info text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-copyright fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Chi Tiết Thương Hiệu</h3>
                            <p class="mb-0 opacity-75">Thông tin thương hiệu #@Model.MATH</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="d-inline-block p-3 bg-light rounded-4 shadow-sm border">
                            <img src="@Url.Content("~/img/" + Model.LOGO)" 
                                 class="img-fluid object-fit-contain" 
                                 style="max-width: 200px; max-height: 200px;" 
                                 alt="@Model.TENTH" 
                                 onerror="this.src='https://placehold.co/200x200?text=No+Logo'" />
                        </div>
                    </div>

                    <h2 class="fw-bold text-dark mb-2">@Model.TENTH</h2>
                    <p class="text-muted mb-4">Mã thương hiệu: @Model.MATH</p>

                    <div class="d-flex justify-content-center gap-2 mt-5 pt-3 border-top">
                        <a href="@Url.Action("Index", "ThuongHieu")" class="btn btn-light px-4 rounded-pill fw-medium">
                            <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <a href="@Url.Action("Edit", "ThuongHieu", new { id = Model.MATH })" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm hover-scale">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
