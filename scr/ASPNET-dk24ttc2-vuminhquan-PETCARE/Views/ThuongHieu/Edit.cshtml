@model WebsiteThuCungBento.Models.THUONGHIEU

@{
    ViewBag.Title = "Cập Nhật Thương Hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning text-dark p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-50 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-copyright fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Cập Nhật Thương Hiệu</h3>
                            <p class="mb-0 opacity-75">Chỉnh sửa thông tin thương hiệu #@Model.MATH</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Edit", "ThuongHieu", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MATH)
                        @Html.HiddenFor(model => model.LOGO)

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                Vui lòng kiểm tra lại thông tin nhập vào.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-4">
                            <!-- Logo Upload Section -->
                            <div class="col-12 text-center mb-3">
                                <label class="form-label fw-medium text-secondary mb-3">Logo Thương Hiệu</label>
                                <div class="position-relative d-inline-block">
                                    <div class="logo-preview-container rounded-4 shadow-sm border border-2 border-dashed border-secondary bg-light d-flex align-items-center justify-content-center overflow-hidden" style="width: 200px; height: 200px;">
                                        <img id="logoPreview" src="@Url.Content("~/img/" + Model.LOGO)" alt="Preview" class="w-100 h-100 object-fit-contain" />
                                    </div>
                                    <label for="fileUpload" class="btn btn-warning position-absolute bottom-0 end-0 m-2 rounded-circle p-2 shadow hover-scale" style="width: 40px; height: 40px; cursor: pointer;">
                                        <i class="fa-solid fa-camera"></i>
                                    </label>
                                </div>
                                <input type="file" id="fileUpload" name="fileUpload" class="d-none" accept="image/*" onchange="previewImage(this)" />
                                <div class="form-text small mt-2">Nhấn vào icon máy ảnh để thay đổi logo mới.</div>
                                @Html.ValidationMessageFor(model => model.LOGO, "", new { @class = "text-danger small" })
                            </div>

                            <!-- Form Fields -->
                            <div class="col-12">
                                <label class="form-label fw-medium text-secondary">Tên Thương Hiệu <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-tag text-muted"></i></span>
                                    @Html.EditorFor(model => model.TENTH, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập tên thương hiệu", @required = "required" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.TENTH, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("Index", "ThuongHieu")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-save me-2"></i>Cập nhật
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #ffc107;
        box-shadow: none;
        border-left: 1px solid #ffc107 !important;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #ffc107;
    }
    
    .input-group:focus-within .form-control {
        border-left: none !important;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
    
    .object-fit-contain {
        object-fit: contain;
    }
</style>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('logoPreview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
