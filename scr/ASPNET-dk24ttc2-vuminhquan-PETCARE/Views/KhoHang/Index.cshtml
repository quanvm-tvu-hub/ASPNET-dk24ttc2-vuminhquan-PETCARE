@model IEnumerable<WebsiteThuCungBento.Models.PHIEUNHAPKHO>

@{
    ViewBag.Title = "Quản lý kho hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h3 class="mb-2 fw-bold">
                <i class="fa-solid fa-warehouse text-primary me-2"></i>
                Quản Lý Kho Hàng
            </h3>
            <p class="text-muted mb-0">Quản lý phiếu nhập kho và tồn kho</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("Create", "KhoHang")" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i>
                Tạo phiếu nhập kho
            </a>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-primary-subtle">
                <div class="stat-icon bg-primary">
                    <i class="fa-solid fa-file-invoice"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count()</h3>
                    <p class="mb-0">Tổng phiếu nhập</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-success-subtle">
                <div class="stat-icon bg-success">
                    <i class="fa-solid fa-boxes-packing"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Sum(x => x.SOLUONG)</h3>
                    <p class="mb-0">Tổng số lượng nhập</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-info-subtle">
                <div class="stat-icon bg-info">
                    <i class="fa-solid fa-calendar-days"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count(x => x.NGAYNK.Month == DateTime.Now.Month)</h3>
                    <p class="mb-0">Nhập tháng này</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-warning-subtle">
                <div class="stat-icon bg-warning">
                    <i class="fa-solid fa-clock-rotate-left"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count(x => x.NGAYNK >= DateTime.Now.AddDays(-7))</h3>
                    <p class="mb-0">7 ngày gần đây</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text bg-white">
                    <i class="fa-solid fa-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo mã sản phẩm, mã phiếu...">
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="dateFilter">
                <option value="">Tất cả thời gian</option>
                <option value="today">Hôm nay</option>
                <option value="week">7 ngày qua</option>
                <option value="month">Tháng này</option>
            </select>
        </div>
    </div>

    <!-- Warehouse Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="p-3">Mã phiếu</th>
                                    <th class="p-3">Sản phẩm</th>
                                    <th class="p-3">Ngày nhập</th>
                                    <th class="p-3 text-center">Số lượng</th>
                                    <th class="p-3 text-center">Trạng thái</th>
                                    <th class="p-3 text-center">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderByDescending(x => x.NGAYNK))
                                {
                                    var daysDiff = (DateTime.Now - item.NGAYNK).Days;
                                    <tr class="warehouse-row" 
                                        data-product="@item.MASP"
                                        data-receipt="@item.MAPHIEUNK"
                                        data-date="@item.NGAYNK.ToString("yyyy-MM-dd")">
                                        <td class="p-3">
                                            <strong class="receipt-id">#@item.MAPHIEUNK</strong>
                                        </td>
                                        <td class="p-3">
                                            <div class="product-code">
                                                <i class="fa-solid fa-box text-muted me-2"></i>
                                                <strong>@item.MASP</strong>
                                            </div>
                                            @if (item.SANPHAM != null)
                                            {
                                                <small class="text-muted">@item.SANPHAM.TENSP</small>
                                            }
                                        </td>
                                        <td class="p-3">
                                            <div>
                                                <i class="fa-solid fa-calendar text-muted me-2"></i>
                                                @String.Format("{0:dd/MM/yyyy}", item.NGAYNK)
                                            </div>
                                            <small class="text-muted">@String.Format("{0:HH:mm}", item.NGAYNK)</small>
                                        </td>
                                        <td class="p-3 text-center">
                                            <span class="badge bg-primary fs-6">
                                                <i class="fa-solid fa-cubes me-1"></i>
                                                @item.SOLUONG
                                            </span>
                                        </td>
                                        <td class="p-3 text-center">
                                            @if (daysDiff == 0)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fa-solid fa-check me-1"></i>
                                                    Hôm nay
                                                </span>
                                            }
                                            else if (daysDiff <= 7)
                                            {
                                                <span class="badge bg-info">
                                                    <i class="fa-solid fa-clock me-1"></i>
                                                    @daysDiff ngày trước
                                                </span>
                                            }
                                            else if (daysDiff <= 30)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fa-solid fa-calendar me-1"></i>
                                                    @daysDiff ngày trước
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fa-solid fa-history me-1"></i>
                                                    Cũ
                                                </span>
                                            }
                                        </td>
                                        <td class="p-3 text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Edit", "KhoHang", new { id = item.MAPHIEUNK })" 
                                                   class="btn btn-sm btn-outline-primary" 
                                                   title="Chỉnh sửa">
                                                    <i class="fa-solid fa-pen"></i>
                                                </a>
                                                <a href="@Url.Action("Details", "KhoHang", new { id = item.MAPHIEUNK })" 
                                                   class="btn btn-sm btn-outline-info" 
                                                   title="Chi tiết">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "KhoHang", new { id = item.MAPHIEUNK })" 
                                                   class="btn btn-sm btn-outline-danger" 
                                                   title="Xóa"
                                                   onclick="return confirm('Bạn có chắc muốn xóa phiếu nhập này?')">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        padding: 1.5rem;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .stat-info h3 {
        font-size: 1.75rem;
        font-weight: 700;
    }

    .stat-info p {
        color: #64748b;
        font-size: 0.9rem;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        color: #64748b;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f8fafc;
    }

    .bg-primary-subtle { background-color: rgba(13, 110, 253, 0.1); }
    .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1); }
    .bg-info-subtle { background-color: rgba(13, 202, 240, 0.1); }
    .bg-warning-subtle { background-color: rgba(255, 193, 7, 0.1); }
</style>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('.warehouse-row');
        
        rows.forEach(row => {
            const product = row.getAttribute('data-product').toLowerCase();
            const receipt = row.getAttribute('data-receipt').toLowerCase();
            
            if (product.includes(searchTerm) || receipt.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Date filter
    document.getElementById('dateFilter').addEventListener('change', function() {
        const filterValue = this.value;
        const rows = document.querySelectorAll('.warehouse-row');
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        
        rows.forEach(row => {
            const dateStr = row.getAttribute('data-date');
            const rowDate = new Date(dateStr);
            rowDate.setHours(0, 0, 0, 0);
            
            let show = true;
            
            if (filterValue === 'today') {
                show = rowDate.getTime() === today.getTime();
            } else if (filterValue === 'week') {
                const weekAgo = new Date(today);
                weekAgo.setDate(weekAgo.getDate() - 7);
                show = rowDate >= weekAgo;
            } else if (filterValue === 'month') {
                show = rowDate.getMonth() === today.getMonth() && 
                       rowDate.getFullYear() === today.getFullYear();
            }
            
            row.style.display = show ? '' : 'none';
        });
    });
</script>
