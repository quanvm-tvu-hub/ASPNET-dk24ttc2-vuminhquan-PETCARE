@model WebsiteThuCungBento.Models.PHIEUNHAPKHO

@{
    ViewBag.Title = "Chi Tiết Phiếu Nhập";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-info text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-clipboard-list fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Chi Tiết Phiếu Nhập</h3>
                            <p class="mb-0 opacity-75">Thông tin phiếu nhập kho #@Model.MAPHIEUNK</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-4 border h-100">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                                        <i class="fa-solid fa-calendar-days fa-lg"></i>
                                    </div>
                                    <h6 class="fw-bold text-secondary mb-0 text-uppercase">Ngày Nhập Kho</h6>
                                </div>
                                <div class="fs-4 fw-bold text-dark ps-5">
                                    @String.Format("{0:dd/MM/yyyy HH:mm}", Model.NGAYNK)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-4 border h-100">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-2 me-3">
                                        <i class="fa-solid fa-arrow-up-9-1 fa-lg"></i>
                                    </div>
                                    <h6 class="fw-bold text-secondary mb-0 text-uppercase">Số Lượng Nhập</h6>
                                </div>
                                <div class="fs-4 fw-bold text-dark ps-5">
                                    @Model.SOLUONG <span class="fs-6 text-muted fw-normal">sản phẩm</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="p-4 bg-light rounded-4 border">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2 me-3">
                                        <i class="fa-solid fa-box fa-lg"></i>
                                    </div>
                                    <h6 class="fw-bold text-secondary mb-0 text-uppercase">Thông Tin Sản Phẩm</h6>
                                </div>
                                <div class="ps-5">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <h4 class="fw-bold text-dark mb-1">
                                                @if (Model.SANPHAM != null)
                                                {
                                                    @Model.SANPHAM.TENSP
                                                }
                                                else
                                                {
                                                    <span>Sản phẩm #@Model.MASP</span>
                                                }
                                            </h4>
                                            <p class="text-muted mb-0">Mã sản phẩm: @Model.MASP</p>
                                        </div>
                                        @if (Model.SANPHAM != null && !string.IsNullOrEmpty(Model.SANPHAM.HINHANH))
                                        {
                                            <div class="col-md-4 text-end">
                                                <img src="@Url.Content("~/img/" + Model.SANPHAM.HINHANH)" class="rounded-3 shadow-sm" style="width: 80px; height: 80px; object-fit: cover;" alt="@Model.SANPHAM.TENSP" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                        <a href="@Url.Action("Index", "KhoHang")" class="btn btn-light px-4 rounded-pill fw-medium">
                            <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <a href="@Url.Action("Edit", "KhoHang", new { id = Model.MAPHIEUNK })" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm hover-scale">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
