@model WebsiteThuCungBento.Models.PHIEUNHAPKHO

@{
    ViewBag.Title = "Xóa Phiếu Nhập Kho";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-triangle-exclamation fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Xóa Phiếu Nhập Kho</h3>
                            <p class="mb-0 opacity-75">Bạn có chắc chắn muốn xóa phiếu nhập này không? Hành động này không thể hoàn tác.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="alert alert-light border-danger border-start border-4 mb-4">
                        <div class="d-flex">
                            <i class="fa-solid fa-circle-info text-danger mt-1 me-3"></i>
                            <div>
                                <h6 class="fw-bold text-danger">Lưu ý quan trọng</h6>
                                <p class="mb-0 text-muted small">Việc xóa phiếu nhập kho sẽ ảnh hưởng đến lịch sử nhập hàng và thống kê tồn kho. Hãy cân nhắc kỹ trước khi thực hiện.</p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-light rounded-4 p-4 mb-4 border">
                        <div class="row g-3">
                            <div class="col-12 border-bottom pb-3">
                                <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Sản phẩm</small>
                                <div class="d-flex align-items-center">
                                    @if (Model.SANPHAM != null)
                                    {
                                        if (!string.IsNullOrEmpty(Model.SANPHAM.HINHANH))
                                        {
                                            <img src="@Url.Content("~/img/" + Model.SANPHAM.HINHANH)" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" />
                                        }
                                        <span class="fw-bold text-dark fs-5">@Model.SANPHAM.TENSP</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold text-dark fs-5">Sản phẩm #@Model.MASP</span>
                                    }
                                </div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Ngày nhập</small>
                                <span class="fw-medium text-dark">@String.Format("{0:dd/MM/yyyy HH:mm}", Model.NGAYNK)</span>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Số lượng</small>
                                <span class="fw-bold text-danger fs-5">@Model.SOLUONG</span>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a href="@Url.Action("Index", "KhoHang")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-trash-can me-2"></i>Xác nhận xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
