@model IEnumerable<WebsiteThuCungBento.Models.CTDONDATHANG>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("DonDatHang", "DonHang")" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-file-invoice text-primary me-2"></i>
                        Chi Tiết Đơn Hàng
                    </h4>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center">Mã ĐH</th>
                                    <th class="text-center">Hình ảnh</th>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center align-middle">
                                            <strong>@item.MADH</strong>
                                        </td>
                                        <td class="text-center align-middle">
                                            <img src="~/img/@item.SANPHAM.HINHANH" 
                                                 alt="@item.SANPHAM.TENSP"
                                                 class="rounded"
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        </td>
                                        <td class="align-middle">
                                            <a href="@Url.Action("sanpham", "User", new { id = item.MASP })" 
                                               target="_blank"
                                               class="text-decoration-none">
                                                <strong class="d-block">@item.SANPHAM.TENSP</strong>
                                                <small class="text-muted">Mã: @item.MASP</small>
                                            </a>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-light text-dark fs-6">@item.SOLUONG</span>
                                        </td>
                                        <td class="text-end align-middle">
                                            <span class="text-muted">@string.Format("{0:#,##0}", item.DONGIA) đ</span>
                                        </td>
                                        <td class="text-end align-middle">
                                            <strong class="text-primary">@string.Format("{0:#,##0}", item.THANHTIEN) đ</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-0">
                                <i class="fa-solid fa-credit-card me-2"></i>
                                <strong>Phương thức thanh toán:</strong> Tiền mặt
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            @if (Model != null && Model.Any())
                            {
                                var total = Model.Sum(x => x.THANHTIEN);
                                <h5 class="mb-0">
                                    <strong>Tổng cộng:</strong>
                                    <span class="text-primary">@string.Format("{0:#,##0}", total) đ</span>
                                </h5>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 text-center">
            <button onclick="window.print()" class="btn btn-primary me-2">
                <i class="fa-solid fa-print me-2"></i> In hóa đơn
            </button>
            <a href="@Url.Action("DonDatHang", "DonHang")" class="btn btn-outline-secondary">
                <i class="fa-solid fa-list me-2"></i> Danh sách đơn hàng
            </a>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .admin-sidebar, .admin-header {
            display: none !important;
        }
    }
</style>