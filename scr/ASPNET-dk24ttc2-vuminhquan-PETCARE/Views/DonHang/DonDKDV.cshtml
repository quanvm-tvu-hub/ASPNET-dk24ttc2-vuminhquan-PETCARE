@model IEnumerable<WebsiteThuCungBento.Models.DangKyDichVu>

@{
    ViewBag.Title = "Đơn đăng ký dịch vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h3 class="mb-2 fw-bold">
                <i class="fa-solid fa-calendar-check text-primary me-2"></i>
                Đơn Đăng Ký Dịch Vụ
            </h3>
            <p class="text-muted mb-0">Quản lý đơn đăng ký dịch vụ thú cưng</p>
        </div>
        <div class="col-md-6 text-md-end">
            <button class="btn btn-outline-primary me-2" onclick="window.print()">
                <i class="fa-solid fa-print me-2"></i>
                In báo cáo
            </button>
            <button class="btn btn-primary" onclick="location.reload()">
                <i class="fa-solid fa-rotate me-2"></i>
                Làm mới
            </button>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-primary-subtle">
                <div class="stat-icon bg-primary">
                    <i class="fa-solid fa-file-lines"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count()</h3>
                    <p class="mb-0">Tổng đơn</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-warning-subtle">
                <div class="stat-icon bg-warning">
                    <i class="fa-solid fa-clock"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count(x => x.TinhTrang == 0)</h3>
                    <p class="mb-0">Chờ duyệt</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-success-subtle">
                <div class="stat-icon bg-success">
                    <i class="fa-solid fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count(x => x.TinhTrang == 1)</h3>
                    <p class="mb-0">Đã duyệt</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card bg-danger-subtle">
                <div class="stat-icon bg-danger">
                    <i class="fa-solid fa-times-circle"></i>
                </div>
                <div class="stat-info">
                    <h3 class="mb-0">@Model.Count(x => x.TinhTrang == 2)</h3>
                    <p class="mb-0">Đã hủy</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text bg-white">
                    <i class="fa-solid fa-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo tên khách hàng, SĐT, dịch vụ...">
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="statusFilter">
                <option value="">Tất cả trạng thái</option>
                <option value="0">Chờ duyệt</option>
                <option value="1">Đã duyệt</option>
                <option value="2">Đã hủy</option>
            </select>
        </div>
    </div>

    <!-- Service Orders Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="p-3">Mã ĐK</th>
                                    <th class="p-3">Dịch vụ</th>
                                    <th class="p-3">Khách hàng</th>
                                    <th class="p-3">Ngày đăng ký</th>
                                    <th class="p-3 text-end">Tổng tiền</th>
                                    <th class="p-3 text-center">Trạng thái</th>
                                    <th class="p-3 text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderByDescending(x => x.NgayDangKy))
                                {
                                    <tr class="service-row" data-status="@item.TinhTrang">
                                        <td class="p-3">
                                            <strong class="order-id">#@item.SoDK</strong>
                                        </td>
                                        <td class="p-3">
                                            <div class="service-name">
                                                <strong>@item.ChiTietDichVu.DichVu.TenDV</strong>
                                            </div>
                                            @if (!string.IsNullOrEmpty(item.ChiTietDichVu.DichVu.ComboDV))
                                            {
                                                <small class="text-muted">
                                                    <i class="fa-solid fa-box me-1"></i>
                                                    @item.ChiTietDichVu.DichVu.ComboDV
                                                </small>
                                                <br/>
                                            }
                                            <small class="text-muted">
                                                <i class="fa-solid fa-weight-scale me-1"></i>
                                                Cân nặng: @item.ChiTietDichVu.DieuKien
                                            </small>
                                        </td>
                                        <td class="p-3">
                                            <div class="customer-name">
                                                <strong>@item.Hoten</strong>
                                            </div>
                                            <small class="text-muted customer-phone">
                                                <i class="fa-solid fa-phone me-1"></i>
                                                @item.SDT
                                            </small>
                                            @if (item.TinhTrang == 0)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fa-solid fa-clock me-1"></i>
                                                    Chờ duyệt
                                                </span>
                                            }
                                            else if (item.TinhTrang == 1)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fa-solid fa-check me-1"></i>
                                                    Đã duyệt
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fa-solid fa-times me-1"></i>
                                                    Đã hủy
                                                </span>
                                            }
                                        </td>
                                        <td class="p-3 text-center">
                                            @if (item.TinhTrang == 0)
                                            {
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-success" 
                                                            onclick="approveService(@item.SoDK)"
                                                            title="Duyệt đơn">
                                                        <i class="fa-solid fa-check"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-danger" 
                                                            onclick="cancelService(@item.SoDK)"
                                                            title="Hủy đơn">
                                                        <i class="fa-solid fa-times"></i>
                                                    </button>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        padding: 1.5rem;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .stat-info h3 {
        font-size: 1.75rem;
        font-weight: 700;
    }

    .stat-info p {
        color: #64748b;
        font-size: 0.9rem;
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        color: #64748b;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f8fafc;
    }

    .bg-primary-subtle { background-color: rgba(13, 110, 253, 0.1); }
    .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1); }
    .bg-warning-subtle { background-color: rgba(255, 193, 7, 0.1); }
    .bg-danger-subtle { background-color: rgba(220, 53, 69, 0.1); }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('.service-row');
        
        rows.forEach(row => {
            const serviceName = row.querySelector('.service-name').textContent.toLowerCase();
            const customerName = row.querySelector('.customer-name').textContent.toLowerCase();
            const phone = row.querySelector('.customer-phone').textContent.toLowerCase();
            
            if (serviceName.includes(searchTerm) || customerName.includes(searchTerm) || phone.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Status filter
    document.getElementById('statusFilter').addEventListener('change', function() {
        const filterValue = this.value;
        const rows = document.querySelectorAll('.service-row');
        
        rows.forEach(row => {
            if (!filterValue) {
                row.style.display = '';
            } else {
                const status = row.getAttribute('data-status');
                row.style.display = status === filterValue ? '' : 'none';
            }
        });
    });

    // Approve service
    function approveService(id) {
        if (confirm('Bạn có chắc muốn duyệt đơn này?')) {
            $.ajax({
                url: '/DonHang/ChangeStatusSignService',
                method: 'post',
                data: { id: id, status: 1 },
                success: function (response) {
                    if (response.Success) {
                        alert('Duyệt thành công!');
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra, vui lòng thử lại!');
                    }
                }
            });
        }
    }

    // Cancel service
    function cancelService(id) {
        if (confirm('Bạn có chắc muốn hủy đơn này?')) {
            $.ajax({
                url: '/DonHang/ChangeStatusSignService',
                method: 'post',
                data: { id: id, status: 2 },
                success: function (response) {
                    if (response.Success) {
                        alert('Hủy đơn thành công!');
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra, vui lòng thử lại!');
                    }
                }
            });
        }
    }
</script>