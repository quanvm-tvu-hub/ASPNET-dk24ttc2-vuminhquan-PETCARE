@model WebsiteThuCungBento.Models.LienheModel
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 style="font-weight: 700; color: var(--primary-color);">Liên Hệ Với Chúng Tôi</h1>
        <p class="text-muted" style="font-size: 1.1rem;">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
    </div>

    <div class="row">
        <!-- Contact Info & Map -->
        <div class="col-5">
            <div class="glass-card p-4 mb-4">
                <h3 class="mb-4" style="font-size: 1.25rem; font-weight: 600;">Thông tin liên hệ</h3>
                
                <div class="d-flex align-items-center mb-3">
                    <div style="width: 40px; height: 40px; border-radius: 50%; background: rgba(var(--primary-rgb), 0.1); display: flex; align-items: center; justify-content: center; margin-right: 1rem; color: var(--primary-color);">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div>
                        <div class="small text-muted">Địa chỉ</div>
                        <div style="font-weight: 500;">19DTHC5 - Đại học Công Nghệ TP.HCM</div>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div style="width: 40px; height: 40px; border-radius: 50%; background: rgba(var(--primary-rgb), 0.1); display: flex; align-items: center; justify-content: center; margin-right: 1rem; color: var(--primary-color);">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div>
                        <div class="small text-muted">Điện thoại</div>
                        <a href="tel:099999999" style="font-weight: 500; color: var(--text-main); text-decoration: none;">099999999</a>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div style="width: 40px; height: 40px; border-radius: 50%; background: rgba(var(--primary-rgb), 0.1); display: flex; align-items: center; justify-content: center; margin-right: 1rem; color: var(--primary-color);">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div>
                        <div class="small text-muted">Email</div>
                        <a href="mailto:a@gmail.com" style="font-weight: 500; color: var(--text-main); text-decoration: none;">a@gmail.com</a>
                    </div>
                </div>
            </div>

            <div class="glass-card p-2 overflow-hidden" style="height: 300px;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.4205909621646!2d106.78291301471481!3d10.85558036069626!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e812813e1%3A0x6e4c23af96c88480!2zVHJ1bmcgVMOibSDEkMOgbyBU4bqhbyBOaMOibiBM4buxYyBDaOG6pXQgTMaw4bujbmcgQ2FvIC0gSFVURUNI!5e0!3m2!1sen!2sus!4v1656350168167!5m2!1sen!2sus" width="100%" height="100%" style="border:0; border-radius: var(--radius-md);" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-7">
            <div class="glass-card p-5">
                <h3 class="mb-4" style="font-size: 1.25rem; font-weight: 600;">Gửi tin nhắn cho chúng tôi</h3>

                @using (Html.BeginForm("Lienhe", "User", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label class="form-label small text-muted">Họ và tên</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập họ tên của bạn" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label small text-muted">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email của bạn", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label small text-muted">Tiêu đề</label>
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Nhập tiêu đề" })
                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <div class="mb-4">
                        <label class="form-label small text-muted">Nội dung</label>
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = "5", placeholder = "Nhập nội dung tin nhắn..." })
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger small mt-1" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3" style="font-weight: 600;">
                        <i class="fa-solid fa-paper-plane me-2"></i> Gửi Tin Nhắn
                    </button>
                }
            </div>
        </div>
    </div>
</div>
