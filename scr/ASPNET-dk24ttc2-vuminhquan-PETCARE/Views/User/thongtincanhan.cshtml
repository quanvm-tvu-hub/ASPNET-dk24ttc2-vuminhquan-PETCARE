@{
    ViewBag.Title = "Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

    var kh = Session["Taikhoan"] as WebsiteThuCungBento.Models.KHACHHANG;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="glass-card p-5">
                <h1 class="text-center mb-5" style="font-weight: 700; color: var(--primary-color);">Hồ Sơ Của Tôi</h1>
                
                <div class="d-flex align-items-start">
                    <div class="me-5 text-center" style="width: 200px;">
                        <div style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden; margin: 0 auto 1.5rem; box-shadow: var(--shadow-md); border: 4px solid white;">
                            <img src="@Url.Content("~/img/" + @kh.HINHANH)" style="width: 100%; height: 100%; object-fit: cover;" alt="@kh.HOTENKH">
                        </div>
                        <a href="@Url.Action("Edit","User",new {id = kh.MAKH })" class="btn btn-outline-primary btn-sm w-100">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Chỉnh sửa
                        </a>
                    </div>
                    
                    <div class="flex-grow-1">
                        <div class="mb-4 pb-3" style="border-bottom: 1px solid var(--border-color);">
                            <label class="small text-muted mb-1">Họ và tên</label>
                            <div style="font-size: 1.25rem; font-weight: 600; color: var(--text-main);">@kh.HOTENKH</div>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-4">
                                <label class="small text-muted mb-1">Tên đăng nhập</label>
                                <div style="font-weight: 500;">@kh.TENDNKH</div>
                            </div>
                            <div class="col-6 mb-4">
                                <label class="small text-muted mb-1">Ngày sinh</label>
                                <div style="font-weight: 500;">@string.Format("{0:dd/MM/yyyy}", @kh.NGAYSINH)</div>
                            </div>
                            <div class="col-6 mb-4">
                                <label class="small text-muted mb-1">Số điện thoại</label>
                                <div style="font-weight: 500;">@kh.DIENTHOAI</div>
                            </div>
                            <div class="col-6 mb-4">
                                <label class="small text-muted mb-1">Email</label>
                                <div style="font-weight: 500;">@kh.EMAIL</div>
                            </div>
                            <div class="col-12 mb-4">
                                <label class="small text-muted mb-1">Địa chỉ</label>
                                <div style="font-weight: 500;">@kh.DIACHI</div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="@Url.Action("ListServiceRegis", "User")" class="btn btn-primary">
                                <i class="fa-solid fa-file-signature me-2"></i> Đơn Đăng Ký Dịch Vụ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

