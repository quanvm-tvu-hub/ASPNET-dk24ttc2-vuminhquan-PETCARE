@{
    ViewBag.Title = Model.TENSP;
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb d-flex gap-2 align-items-center" style="list-style: none; padding: 0; margin: 0;">
            <li class="breadcrumb-item"><a href="/" class="text-muted text-decoration-none">Trang chủ</a></li>
            <li class="text-muted">/</li>
            <li class="breadcrumb-item"><a href="@Url.Action("sanpham", "User")" class="text-muted text-decoration-none">Sản phẩm</a></li>
            <li class="text-muted">/</li>
            <li class="breadcrumb-item active fw-bold text-primary" aria-current="page">@Model.TENSP</li>
        </ol>
    </nav>

    <div class="glass-panel p-5 mb-5" style="border-radius: var(--radius-xl);">
        <div class="row">
            <!-- Product Image -->
            <div class="col-5">
                <div class="product-image-wrapper" style="border-radius: var(--radius-lg); overflow: hidden; box-shadow: var(--shadow-md); padding-top: 0; height: auto;">
                    <img src="@Url.Content("~/img/" + Model.HINHANH)" alt="@Model.TENSP" class="w-100 d-block" style="object-fit: contain;">
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-7" style="padding-left: 3rem;">
                <h1 class="fw-bold mb-3 text-primary" style="font-size: 2.5rem;">@Model.TENSP</h1>
                
                <div class="d-flex align-items-center mb-4 text-muted" style="font-size: 0.95rem;">
                    <span class="me-3"><i class="fa-solid fa-tag me-1 text-accent"></i> Mã SP: <strong>@Model.MASP</strong></span>
                    <span class="mx-3">|</span>
                    <span class="me-3"><i class="fa-solid fa-layer-group me-1 text-accent"></i> Loại: <a href="@Url.Action("SPTheoloai", "User", new { id = Model.MALOAI })" class="text-primary fw-medium">@Model.TENLOAI</a></span>
                    <span class="mx-3">|</span>
                    <span><i class="fa-solid fa-copyright me-1 text-accent"></i> Thương hiệu: <a href="@Url.Action("SPTheothuonghieu", "User", new { id = Model.MATH })" class="text-primary fw-medium">@Model.TENTH</a></span>
                </div>

                <div class="mb-4">
                    <span class="text-accent fw-bold" style="font-size: 2.5rem;">@String.Format("{0:0,0}", Model.DONGIABAN) đ</span>
                </div>

                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <strong class="me-2">Trạng thái:</strong>
                        @if (Model.SOLUONG > 0)
                        {
                            <span class="badge" style="background-color: #10b981; color: white; padding: 0.5em 1em; border-radius: 999px; font-size: 0.85rem; font-weight: 600;">
                                <i class="fa-solid fa-check me-1"></i> Còn hàng (@Model.SOLUONG)
                            </span>
                        }
                        else
                        {
                            <span class="badge" style="background-color: #ef4444; color: white; padding: 0.5em 1em; border-radius: 999px; font-size: 0.85rem; font-weight: 600;">
                                <i class="fa-solid fa-xmark me-1"></i> Hết hàng
                            </span>
                        }
                    </div>
                </div>

                <div class="mb-5 text-muted" style="line-height: 1.8; font-size: 1.05rem;">
                    @Model.MOTA
                </div>

                <div class="d-flex gap-3">
                    @if (Model.SOLUONG > 0)
                    {
                        <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMASP = Model.MASP, @strURL = Request.Url.ToString() })" class="btn btn-primary" style="padding: 1rem 2rem; flex-grow: 1; font-size: 1.1rem;">
                            <i class="fa-solid fa-cart-plus me-2"></i> Thêm vào giỏ hàng
                        </a>
                    }
                    else
                    {
                        <button class="btn" disabled style="padding: 1rem 2rem; flex-grow: 1; background-color: #e2e8f0; color: #94a3b8; cursor: not-allowed; font-size: 1.1rem;">
                            Tạm hết hàng
                        </button>
                    }
                    
                    <button onclick="window.open('https://youtu.be/HLlE3a0WJhs?si=hyhbsFq8aYtNjmUI', '_blank')" class="btn btn-outline" style="padding: 1rem 1.5rem;">
                        <i class="fa-brands fa-youtube me-2"></i> Xem Video
                    </button>
                </div>
                
                <div class="mt-4 p-3 d-flex align-items-center gap-3" style="background: rgba(15, 23, 42, 0.03); border-radius: var(--radius-md); border: 1px dashed var(--border-color);">
                    <div class="btn-icon bg-white text-primary shadow-sm">
                        <i class="fa-solid fa-headset"></i>
                    </div>
                    <div>
                        <div class="text-muted" style="font-size: 0.9rem;">Cần tư vấn thêm?</div>
                        <div class="fw-bold text-primary">Hotline: <a href="tel:0908943407" class="text-primary">0908943407</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Tabs -->
    <div class="glass-panel p-5" style="border-radius: var(--radius-xl);">
        <div class="mb-4 border-bottom">
            <button class="btn btn-link text-decoration-none fw-bold text-primary pb-3" style="border-bottom: 3px solid var(--accent-color); border-radius: 0;">
                Thông tin chi tiết
            </button>
        </div>
        
        <div class="text-muted" style="line-height: 1.8;">
            <h3 class="fw-bold text-primary mb-3">@Model.TENSP</h3>
            <p class="mb-4">@Model.MOTA</p>
            
            <h4 class="fw-bold text-primary mt-5 mb-4">Hình ảnh thực tế</h4>
            <div class="text-center mb-4 p-4 bg-white rounded-3 shadow-sm">
                <img src="@Url.Content("~/img/" + Model.HINHANH)" alt="@Model.TENSP" style="max-width: 100%; border-radius: var(--radius-md);">
            </div>

            <h4 class="fw-bold text-primary mt-5 mb-4">Thông tin thêm</h4>
            <div>
                @Html.Action("hinhanh", new { id = Model.MASP })
            </div>
        </div>
    </div>
</div>

<!-- Related Products (Optional placeholder) -->
<div class="container mb-5">
    <!-- Could add related products here later -->
</div>
