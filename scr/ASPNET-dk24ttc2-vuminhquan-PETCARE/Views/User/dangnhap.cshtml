@model WebsiteThuCungBento.Models.DangNhapModel
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-12" style="max-width: 1000px;">
        <div class="glass-card overflow-hidden d-flex shadow-xl" style="min-height: 600px;">
            <!-- Image Side -->
            <div class="d-none d-lg-block w-50 position-relative bg-light">
                <img src="~/images/pet.jpg" alt="Login Banner" style="width: 100%; height: 100%; object-fit: cover;">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-5" 
                     style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);">
                    <h2 class="text-white fw-bold mb-2">Chào mừng trở lại!</h2>
                    <p class="text-white-50 mb-0">Đăng nhập để tiếp tục mua sắm và chăm sóc thú cưng của bạn.</p>
                </div>
            </div>

            <!-- Form Side -->
            <div class="w-100 w-lg-50 p-5 d-flex flex-column justify-content-center bg-white">
                <div class="text-center mb-5">
                    <h1 style="font-weight: 700; color: var(--primary-color);">Đăng Nhập</h1>
                    <p class="text-muted">Nhập thông tin tài khoản của bạn</p>
                </div>

                @using (Html.BeginForm("dangnhap", "User", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <input name="FormType" type="hidden" value="customer_login">
                    <input name="utf8" type="hidden" value="true">

                    if (ViewBag.Thongbao != null)
                    {
                        <div class="alert alert-danger text-center mb-4" style="background: rgba(239, 68, 68, 0.1); color: #ef4444; border-radius: var(--radius-sm); padding: 0.75rem;">
                            <i class="fa-solid fa-circle-exclamation me-2"></i> @ViewBag.Thongbao
                        </div>
                    }

                    <div class="form-floating-custom">
                        @Html.TextBox("tendn", null, new { placeholder = "Tên đăng nhập" })
                        <i class="fa-solid fa-user"></i>
                    </div>

                    <div class="form-floating-custom">
                        <input type="password" name="matkhau" placeholder="Mật khẩu" required />
                        <i class="fa-solid fa-lock"></i>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <label class="d-flex align-items-center text-muted small" style="cursor: pointer;">
                            <input type="checkbox" class="me-2"> Ghi nhớ đăng nhập
                        </label>
                        <a href="@Url.Action("QuenMK","User")" class="small text-primary text-decoration-none fw-bold">Quên mật khẩu?</a>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 mb-4 fw-bold text-uppercase" style="letter-spacing: 0.5px;">
                        Đăng nhập
                    </button>

                    <div class="text-center">
                        <span class="text-muted">Chưa có tài khoản? </span>
                        <a href="@Url.Action("DangKy", "User")" class="text-primary fw-bold text-decoration-none">Đăng ký ngay</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


