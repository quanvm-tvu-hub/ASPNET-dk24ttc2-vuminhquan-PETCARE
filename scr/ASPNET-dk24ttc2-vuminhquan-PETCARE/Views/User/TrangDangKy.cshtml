@using WebsiteThuCungBento.Models
@model List<DangKy>

@{
    ViewBag.Title = "Xác nhận đặt dịch vụ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@{
    KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Page Header -->
            <div class="text-center mb-5">
                <h1 class="fw-bold mb-2">Xác Nhận Đặt Dịch Vụ</h1>
                <p class="text-muted">Vui lòng kiểm tra thông tin trước khi đặt dịch vụ</p>
            </div>

            @using (Html.BeginForm("TrangDangKy", "User", FormMethod.Post, new { @class = "checkout-form" }))
            {
                <div class="row g-4">
                    <!-- Left Column - Customer Info & Payment -->
                    <div class="col-lg-7">
                        <!-- Customer Information -->
                        <div class="card border-0 shadow-sm rounded-3 mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="fa-solid fa-user-circle text-primary me-2"></i>
                                    Thông Tin Khách Hàng
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small">Họ và tên</label>
                                        <input class="form-control" name="customer_name" placeholder="Nhập họ tên" value="@kh.HOTENKH" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small">Số điện thoại</label>
                                        <input class="form-control" name="customer_phone" placeholder="Nhập số điện thoại" value="@kh.DIENTHOAI" required>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label fw-bold small">Địa chỉ</label>
                                        <input class="form-control" name="address" placeholder="Nhập địa chỉ" value="@kh.DIACHI" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="card border-0 shadow-sm rounded-3">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="fa-solid fa-credit-card text-primary me-2"></i>
                                    Phương Thức Thanh Toán
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="payment-option">
                                    <input type="radio" class="btn-check" name="payment_method" id="payment_cod" value="cod" checked>
                                    <label class="payment-label" for="payment_cod">
                                        <div class="d-flex align-items-center">
                                            <div class="payment-icon">
                                                <i class="fa-solid fa-money-bill-wave"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">Thanh toán tại quầy</div>
                                                <small class="text-muted">Thanh toán tiền mặt khi đến sử dụng dịch vụ</small>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column - Order Summary -->
                    <div class="col-lg-5">
                        <div class="card border-0 shadow-lg rounded-3 sticky-top" style="top: 100px;">
                            <div class="card-header bg-gradient text-white py-3" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-light));">
                                <h5 class="mb-0 fw-bold">
                                    <i class="fa-solid fa-clipboard-list me-2"></i>
                                    Thông Tin Đơn Hàng
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                @foreach (var item in Model)
                                {
                                    <!-- Service Item -->
                                    <div class="service-item mb-4">
                                        <div class="d-flex gap-3">
                                            <div class="service-image">
                                                <img src="~/images/spa-cho-meo-12.jpg" alt="Service" class="rounded-3">
                                                <span class="badge-quantity">1</span>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1">@item.iTENDV</h6>
                                                <p class="text-primary fw-bold mb-0">@String.Format("{0:0,0}", item.iTONGTIEN)đ</p>
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="my-3">

                                    <!-- Price Summary -->
                                    <div class="price-summary">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted">Tạm tính</span>
                                            <span class="fw-bold">@String.Format("{0:0,0}", item.iTONGTIEN)đ</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-3">
                                            <span class="text-muted">Phí dịch vụ</span>
                                            <span class="text-success">Miễn phí</span>
                                        </div>
                                        
                                        <div class="total-section p-3 rounded-3 bg-light">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-bold fs-5">Tổng cộng</span>
                                                <span class="fw-bold fs-4 text-primary">@String.Format("{0:0,0}", item.iTONGTIEN)đ</span>
                                            </div>
                                        </div>
                                        <input type="number" hidden name="tongtien" value="@item.iTONGTIEN" />
                                    </div>

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-primary w-100 py-3 mt-4 fw-bold">
                                        <i class="fa-solid fa-check-circle me-2"></i>
                                        XÁC NHẬN ĐẶT DỊCH VỤ
                                    </button>
                                }

                                <!-- Security Note -->
                                <div class="text-center mt-3">
                                    <small class="text-muted">
                                        <i class="fa-solid fa-shield-halved me-1"></i>
                                        Thông tin của bạn được bảo mật
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .checkout-form .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .checkout-form .form-control:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 4px rgba(245,158,11,0.1);
    }

    .payment-option {
        margin-bottom: 1rem;
    }

    .payment-label {
        display: block;
        padding: 1.25rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .payment-label:hover {
        border-color: var(--accent-color);
        background: #fff7ed;
    }

    .btn-check:checked + .payment-label {
        border-color: var(--accent-color);
        background: #fff7ed;
        box-shadow: 0 4px 12px rgba(245,158,11,0.2);
    }

    .payment-icon {
        width: 50px;
        height: 50px;
        background: var(--accent-color);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        color: white;
        font-size: 1.5rem;
    }

    .service-image {
        position: relative;
        width: 80px;
        height: 80px;
        flex-shrink: 0;
    }

    .service-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .badge-quantity {
        position: absolute;
        top: -8px;
        right: -8px;
        background: var(--accent-color);
        color: white;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(245,158,11,0.4);
    }

    .total-section {
        border: 2px dashed var(--accent-color);
    }

    .sticky-top {
        position: sticky;
        top: 100px;
    }
</style>
