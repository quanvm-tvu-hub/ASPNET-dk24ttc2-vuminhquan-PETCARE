@model WebsiteThuCungBento.Models.LOAI

@{
    ViewBag.Title = "Cập Nhật Loại Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning text-dark p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-50 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-pen-to-square fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Cập Nhật Loại Sản Phẩm</h3>
                            <p class="mb-0 opacity-75">Chỉnh sửa thông tin loại sản phẩm #@Model.MALOAI</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Edit", "Loai", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MALOAI)

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                Vui lòng kiểm tra lại thông tin nhập vào.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-medium text-secondary">Tên Loại Sản Phẩm <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-tag text-muted"></i></span>
                                @Html.EditorFor(model => model.TENLOAI, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập tên loại sản phẩm", @required = "required" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.TENLOAI, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("Index", "Loai")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-save me-2"></i>Cập nhật
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #ffc107;
        box-shadow: none;
        border-left: 1px solid #ffc107 !important;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #ffc107;
    }
    
    .input-group:focus-within .form-control {
        border-left: none !important;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
