@model WebsiteThuCungBento.Models.KHACHHANG

@{
    ViewBag.Title = "Chi Tiết Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-info text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-address-card fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Thông Tin Khách Hàng</h3>
                            <p class="mb-0 opacity-75">Chi tiết hồ sơ khách hàng @Model.HOTENKH</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row g-5">
                        <!-- Avatar Section -->
                        <div class="col-md-4 text-center border-end-md">
                            <div class="mb-4">
                                <div class="avatar-container rounded-circle shadow-sm border border-4 border-light mx-auto">
                                    @if (string.IsNullOrEmpty(Model.HINHANH))
                                    {
                                        <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-secondary">
                                            <i class="fa-solid fa-user fa-4x"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="@Url.Content("~/img/" + Model.HINHANH)" alt="@Model.HOTENKH" class="w-100 h-100 object-fit-cover" />
                                    }
                                </div>
                            </div>
                            <h4 class="fw-bold text-dark mb-1">@Model.HOTENKH</h4>
                            <p class="text-muted mb-3">@Model.TENDNKH</p>
                            
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Edit", "KhachHang", new { id = Model.MAKH })" class="btn btn-primary rounded-pill shadow-sm hover-scale">
                                    <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa
                                </a>
                            </div>
                        </div>

                        <!-- Info Section -->
                        <div class="col-md-8">
                            <h5 class="fw-bold text-secondary mb-4 border-bottom pb-2">Thông Tin Cá Nhân</h5>
                            
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                            <i class="fa-solid fa-phone"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Số điện thoại</small>
                                            <span class="fw-medium fs-5 text-dark">@Model.DIENTHOAI</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-light rounded-circle p-2 me-3 text-danger">
                                            <i class="fa-solid fa-envelope"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Email</small>
                                            <span class="fw-medium text-dark">@Model.EMAIL</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-light rounded-circle p-2 me-3 text-success">
                                            <i class="fa-solid fa-cake-candles"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Ngày sinh</small>
                                            <span class="fw-medium text-dark">
                                                @(Model.NGAYSINH.HasValue ? Model.NGAYSINH.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-light rounded-circle p-2 me-3 text-warning">
                                            <i class="fa-solid fa-location-dot"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Địa chỉ</small>
                                            <span class="fw-medium text-dark">@Model.DIACHI</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-5 pt-3 border-top d-flex justify-content-end">
                                <a href="@Url.Action("Index", "KhachHang")" class="btn btn-light rounded-pill px-4 fw-medium">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-container {
        width: 160px;
        height: 160px;
        overflow: hidden;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }

    @@media (min-width: 768px) {
        .border-end-md {
            border-right: 1px solid #dee2e6;
        }
    }
</style>
