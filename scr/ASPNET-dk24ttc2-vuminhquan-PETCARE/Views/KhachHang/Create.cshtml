@model WebsiteThuCungBento.Models.KHACHHANG

@{
    ViewBag.Title = "Tạo Mới Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-success text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-user-plus fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Tạo Mới Khách Hàng</h3>
                            <p class="mb-0 opacity-75">Thêm khách hàng mới vào hệ thống</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Create", "KhachHang", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()

                        if (!string.IsNullOrEmpty(ViewBag.Thongbao))
                        {
                            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                @ViewBag.Thongbao
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-4">
                            <!-- Avatar Upload Section -->
                            <div class="col-md-4 text-center">
                                <div class="position-relative d-inline-block mb-3">
                                    <div class="avatar-preview-container rounded-circle shadow-sm border border-4 border-light bg-light d-flex align-items-center justify-content-center">
                                        <img id="avatarPreview" src="#" alt="Avatar Preview" class="w-100 h-100 object-fit-cover d-none" />
                                        <i id="avatarPlaceholder" class="fa-solid fa-user text-secondary fa-4x"></i>
                                    </div>
                                    <label for="fileUpload" class="btn btn-sm btn-success position-absolute bottom-0 end-0 rounded-circle p-2 shadow-sm" style="width: 35px; height: 35px; cursor: pointer;">
                                        <i class="fa-solid fa-camera"></i>
                                    </label>
                                </div>
                                <input type="file" id="fileUpload" name="fileUpload" class="d-none" accept="image/*" onchange="previewImage(this)" required />
                                <p class="text-muted small mb-0">Chọn ảnh đại diện</p>
                                @Html.ValidationMessageFor(model => model.HINHANH, "", new { @class = "text-danger small" })
                            </div>

                            <!-- Form Fields -->
                            <div class="col-md-8">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Họ và tên</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user text-muted"></i></span>
                                            @Html.EditorFor(model => model.HOTENKH, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập họ tên đầy đủ", @required = "required" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.HOTENKH, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Tên đăng nhập</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-id-card text-muted"></i></span>
                                            @Html.EditorFor(model => model.TENDNKH, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Username", @required = "required" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TENDNKH, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Mật khẩu</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-lock text-muted"></i></span>
                                            @Html.EditorFor(model => model.MATKHAUKH, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @type = "password", @placeholder = "Password", @required = "required" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.MATKHAUKH, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Số điện thoại</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-phone text-muted"></i></span>
                                            @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "0xxxxxxxxx", @required = "required", @onkeypress = "return isNumberKey(event)" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Ngày sinh</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-calendar text-muted"></i></span>
                                            <input type="date" name="NGAYSINH" id="NGAYSINH" class="form-control border-start-0 ps-0" required />
                                        </div>
                                        @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @type = "email", @placeholder = "example@email.com", @required = "required" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Địa chỉ</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-location-dot text-muted"></i></span>
                                            @Html.TextAreaFor(model => model.DIACHI, new { @class = "form-control border-start-0 ps-0", @rows = "2", @placeholder = "Nhập địa chỉ liên hệ", @required = "required" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger small mt-1" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("Index", "KhachHang")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-success px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-plus me-2"></i>Tạo mới
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-preview-container {
        width: 150px;
        height: 150px;
        overflow: hidden;
        margin: 0 auto;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: none;
        border-left: 1px solid #198754 !important;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #198754;
    }
    
    .input-group:focus-within .form-control {
        border-left: none !important;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('avatarPreview').src = e.target.result;
                document.getElementById('avatarPreview').classList.remove('d-none');
                document.getElementById('avatarPlaceholder').classList.add('d-none');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
