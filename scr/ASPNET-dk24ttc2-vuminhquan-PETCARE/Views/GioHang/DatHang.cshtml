@using WebsiteThuCungBento.Models
@model List<Giohang>

@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Xác Nhận Đơn Hàng</h1>
        <p class="text-muted">Vui lòng kiểm tra thông tin giao hàng và thanh toán</p>
    </div>

    @{
        KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
    }

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="row">
            <!-- Shipping Information -->
            <div class="col-7">
                <div class="glass-panel p-5 mb-4" style="border-radius: var(--radius-lg);">
                    <h3 class="mb-4 pb-3 border-bottom fw-bold text-primary">
                        <i class="fa-solid fa-truck-fast me-2"></i> Thông Tin Giao Hàng
                    </h3>
                    
                    <div class="mb-4">
                        <label class="form-label fw-medium mb-2">Họ và tên người nhận</label>
                        <input type="text" name="billing_address_full_name" value="@kh.HOTENKH" class="form-control p-3 rounded-3 border" style="background: #f8fafc; width: 100%;">
                    </div>

                    <div class="row mb-4">
                        <div class="col-6">
                            <label class="form-label fw-medium mb-2">Số điện thoại</label>
                            <input type="tel" name="billing_address_phone" value="@kh.DIENTHOAI" class="form-control p-3 rounded-3 border" style="background: #f8fafc; width: 100%;">
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-medium mb-2">Email</label>
                            <input type="email" name="billing_address_email" value="@kh.EMAIL" class="form-control p-3 rounded-3 border" style="background: #f8fafc; width: 100%;">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium mb-2">Địa chỉ nhận hàng</label>
                        <input type="text" name="billing_address_address" value="@kh.DIACHI" class="form-control p-3 rounded-3 border" style="background: #f8fafc; width: 100%;">
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-medium mb-2">Ngày giao hàng mong muốn</label>
                        <input type="date" name="Ngaygiao" class="form-control p-3 rounded-3 border" style="background: #f8fafc; width: 100%;">
                    </div>
                </div>

                <div class="glass-panel p-5" style="border-radius: var(--radius-lg);">
                    <h3 class="mb-4 pb-3 border-bottom fw-bold text-primary">
                        <i class="fa-solid fa-credit-card me-2"></i> Phương Thức Thanh Toán
                    </h3>

                    <div class="payment-options">
                        <div class="form-check p-3 mb-3 border rounded-3" style="cursor: pointer;">
                            <input class="form-check-input" type="radio" name="sl_ThanhToan" id="payment_cod" value="1" checked onchange="togglePaymentInfo()">
                            <label class="form-check-label fw-medium d-flex align-items-center" for="payment_cod" style="cursor: pointer;">
                                <i class="fa-solid fa-money-bill-wave me-3 text-success fa-lg"></i>
                                Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>

                        <div class="form-check p-3 mb-3 border rounded-3" style="cursor: pointer;">
                            <input class="form-check-input" type="radio" name="sl_ThanhToan" id="payment_bank" value="0" onchange="togglePaymentInfo()">
                            <label class="form-check-label fw-medium d-flex align-items-center" for="payment_bank" style="cursor: pointer;">
                                <i class="fa-solid fa-building-columns me-3 text-primary fa-lg"></i>
                                Chuyển khoản ngân hàng / Ví điện tử
                            </label>
                        </div>
                    </div>

                    <div id="bank_info" class="mt-4 p-4 bg-light rounded-3" style="display: none; border: 1px dashed var(--primary-color);">
                        <h5 class="fw-bold text-primary mb-3">Thông tin chuyển khoản:</h5>
                        <p class="mb-2"><strong>Ngân hàng:</strong> Sacombank</p>
                        <p class="mb-2"><strong>Số tài khoản:</strong> <span class="text-accent fw-bold">060908123456</span></p>
                        <p class="mb-2"><strong>Chủ tài khoản:</strong> Vu Minh Quan</p>
                        <hr>
                        <p class="mb-2"><strong>MOMO:</strong> <span class="text-accent fw-bold">09092345678</span></p>
                        <div class="mt-3 small text-muted">
                            <i class="fa-solid fa-circle-info me-1"></i> Vui lòng ghi nội dung chuyển khoản là: <strong>[SĐT] - [Tên KH]</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-5">
                <div class="glass-panel p-5 sticky-top" style="top: 100px; border-radius: var(--radius-lg);">
                    <h3 class="mb-4 pb-3 border-bottom fw-bold text-primary">Đơn Hàng Của Bạn</h3>
                    
                    <div class="order-items mb-4" style="max-height: 400px; overflow-y: auto;">
                        @foreach (var item in Model)
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="position-relative" style="width: 60px; height: 60px; border-radius: var(--radius-md); overflow: hidden; margin-right: 1rem; flex-shrink: 0;">
                                    <img src="~/img/@item.gHINHANH" alt="@item.gTENSP" style="width: 100%; height: 100%; object-fit: cover;">
                                    <span class="position-absolute top-0 end-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 20px; height: 20px; font-size: 0.7rem;">@item.iSOLUONG</span>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-medium text-primary" style="font-size: 0.95rem; line-height: 1.2;">@item.gTENSP</div>
                                </div>
                                <div class="fw-bold text-end ms-3">@String.Format("{0:0,0}", item.dTHANHTIEN) đ</div>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between mb-2 text-muted">
                        <span>Tạm tính:</span>
                        <span>@String.Format("{0:0,0}", ViewBag.Tongtien) đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4 text-muted">
                        <span>Phí vận chuyển:</span>
                        <span>Miễn phí</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-end pt-3 border-top">
                        <span class="fw-bold fs-5">Tổng cộng:</span>
                        <div class="text-end">
                            <div class="fw-bold text-accent fs-4">@String.Format("{0:0,0}", ViewBag.Tongtien) đ</div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 mt-4 fw-bold shadow-lg text-uppercase" style="letter-spacing: 1px;">
                        Đặt Hàng Ngay
                    </button>
                    
                    <div class="text-center mt-3">
                        <a href="@Url.Action("Giohang", "GioHang")" class="text-muted text-decoration-none small">
                            <i class="fa-solid fa-arrow-left me-1"></i> Quay lại giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function togglePaymentInfo() {
        var paymentMethod = document.querySelector('input[name="sl_ThanhToan"]:checked').value;
        var bankInfo = document.getElementById('bank_info');
        
        if (paymentMethod === "0") {
            $(bankInfo).slideDown();
        } else {
            $(bankInfo).slideUp();
        }
    }
</script>
