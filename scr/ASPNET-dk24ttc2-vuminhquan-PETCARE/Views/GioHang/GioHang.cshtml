@using WebsiteThuCungBento.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-center mb-5">
        <h1 class="fw-bold text-primary">Giỏ Hàng Của Bạn</h1>
        <span class="badge bg-primary ms-3 rounded-pill">@ViewBag.Tongsoluong sản phẩm</span>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="glass-panel p-5 text-center" style="max-width: 600px; margin: 0 auto; border-radius: var(--radius-xl);">
            <div class="mb-4">
                <div style="width: 100px; height: 100px; background: rgba(245, 158, 11, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                    <i class="fa-solid fa-cart-arrow-down fa-3x text-accent"></i>
                </div>
            </div>
            <h3 class="fw-bold mb-3">Giỏ hàng của bạn đang trống</h3>
            <p class="text-muted mb-4">Hãy khám phá thêm các sản phẩm tuyệt vời của chúng tôi và thêm vào giỏ hàng nhé!</p>
            <a href="@Url.Action("sanpham", "User")" class="btn btn-primary btn-lg px-5">
                Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-8">
                <div class="glass-panel p-0 overflow-hidden" style="border-radius: var(--radius-lg);">
                    <table class="table mb-0" style="vertical-align: middle;">
                        <thead style="background: rgba(15, 23, 42, 0.03);">
                            <tr>
                                <th class="py-3 ps-4" style="width: 45%;">Sản phẩm</th>
                                <th class="py-3" style="width: 15%;">Đơn giá</th>
                                <th class="py-3" style="width: 20%;">Số lượng</th>
                                <th class="py-3" style="width: 15%;">Thành tiền</th>
                                <th class="py-3 pe-4" style="width: 5%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border-bottom: 1px solid var(--border-color);">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="position-relative" style="width: 80px; height: 80px; border-radius: var(--radius-md); overflow: hidden; margin-right: 1rem;">
                                                <img src="~/img/@item.gHINHANH" alt="@item.gTENSP" style="width: 100%; height: 100%; object-fit: cover;">
                                            </div>
                                            <div>
                                                <a href="@Url.Action("Chitiet", "User", new { id = item.iMASP})" class="fw-bold text-primary text-decoration-none d-block mb-1">@item.gTENSP</a>
                                                <div class="small text-muted">Mã SP: @item.iMASP</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="fw-medium text-muted">@String.Format("{0:0,0}", item.dDONGIA) đ</td>
                                    <td>
                                        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMASP }))
                                        {
                                            <div class="d-flex align-items-center bg-white rounded-pill border p-1" style="width: fit-content;">
                                                <input type="number" name="txtSoLuong" value="@item.iSOLUONG" min="1" max="100" class="form-control border-0 text-center p-0" style="width: 40px; height: 30px; background: transparent;">
                                                <button type="submit" class="btn btn-icon btn-sm text-primary" style="width: 30px; height: 30px;">
                                                    <i class="fa-solid fa-rotate"></i>
                                                </button>
                                            </div>
                                        }
                                    </td>
                                    <td class="fw-bold text-accent">@String.Format("{0:0,0}", item.dTHANHTIEN) đ</td>
                                    <td class="pe-4 text-end">
                                        <a href="@Url.Action("XoaGiohang", new { @iMaSp = item.iMASP })" class="btn-icon text-danger bg-white shadow-sm" style="width: 36px; height: 36px;" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    <div class="p-4 bg-light d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("sanpham", "User")" class="text-muted text-decoration-none">
                            <i class="fa-solid fa-arrow-left me-2"></i> Tiếp tục xem sản phẩm
                        </a>
                        <a href="@Url.Action("XoaTatcaGiohang")" class="text-danger text-decoration-none fw-medium" onclick="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?');">
                            Xóa tất cả giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="glass-panel p-4 sticky-top" style="top: 100px; border-radius: var(--radius-lg);">
                    <h3 class="mb-4 fw-bold text-primary" style="font-size: 1.25rem;">Tổng quan đơn hàng</h3>
                    
                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Tạm tính (@ViewBag.Tongsoluong sản phẩm):</span>
                        <span>@String.Format("{0:0,0}", ViewBag.Tongtien) đ</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Phí vận chuyển:</span>
                        <span>Miễn phí</span>
                    </div>
                    
                    <hr class="my-4" style="border-color: var(--border-color);">
                    
                    <div class="d-flex justify-content-between mb-4 align-items-end">
                        <span class="fw-bold">Tổng cộng:</span>
                        <div class="text-end">
                            <div class="fw-bold text-accent" style="font-size: 1.5rem;">@String.Format("{0:0,0}", ViewBag.Tongtien) đ</div>
                            <div class="small text-muted">(Đã bao gồm VAT)</div>
                        </div>
                    </div>
                    
                    <a href="@Url.Action("Dathang", "GioHang")" class="btn btn-primary w-100 py-3 mb-3 fw-bold shadow-lg" style="letter-spacing: 0.5px;">
                        TIẾN HÀNH THANH TOÁN
                    </a>
                    
                    <div class="text-center mt-3">
                        <span class="text-muted small"><i class="fa-solid fa-shield-halved me-1"></i> Bảo mật thanh toán 100%</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
