@model WebsiteThuCungBento.Models.SANPHAM

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-triangle-exclamation fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Xóa Sản Phẩm</h3>
                            <p class="mb-0 opacity-75">Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row g-4 align-items-center mb-5">
                        <div class="col-md-4 text-center">
                            <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-light">
                                <div class="p-3 d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <img src="@Url.Content("~/img/" + Model.HINHANH)" 
                                         class="img-fluid rounded-3 shadow-sm" 
                                         style="max-height: 100%; object-fit: contain;" 
                                         alt="@Model.TENSP" 
                                         onerror="this.src='https://placehold.co/200x200?text=No+Image'" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h4 class="fw-bold text-dark mb-2">@Model.TENSP</h4>
                            <div class="mb-3">
                                <span class="badge bg-secondary rounded-pill px-3">ID: @Model.MASP</span>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 rounded-pill px-3">@Model.LOAI.TENLOAI</span>
                            </div>
                            
                            <div class="row g-3">
                                <div class="col-6">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Giá bán</small>
                                    <span class="fw-bold text-primary fs-5">@string.Format("{0:N0} đ", Model.DONGIABAN)</span>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.75rem;">Số lượng kho</small>
                                    <span class="fw-bold text-dark fs-5">@Model.SOLUONG</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a href="@Url.Action("Index", "SanPham")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-trash-can me-2"></i>Xác nhận xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
