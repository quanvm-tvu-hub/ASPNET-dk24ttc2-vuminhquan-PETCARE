@model WebsiteThuCungBento.Models.SANPHAM

@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-box-open fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Chi Tiết Sản Phẩm</h3>
                            <p class="mb-0 opacity-75">Thông tin chi tiết sản phẩm #@Model.MASP</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row g-5">
                        <!-- Product Image Section -->
                        <div class="col-md-5">
                            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 bg-light">
                                <div class="position-relative h-100 d-flex align-items-center justify-content-center p-4">
                                    <img src="@Url.Content("~/img/" + Model.HINHANH)" 
                                         class="img-fluid rounded-3 shadow-sm" 
                                         style="max-height: 400px; object-fit: contain;" 
                                         alt="@Model.TENSP" 
                                         onerror="this.src='https://placehold.co/400x400?text=No+Image'" />
                                    
                                    @if (Model.SOLUONG > 0)
                                    {
                                        <span class="position-absolute top-0 end-0 m-3 badge bg-success rounded-pill px-3 py-2 shadow-sm">
                                            <i class="fa-solid fa-check me-1"></i>Còn hàng
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="position-absolute top-0 end-0 m-3 badge bg-danger rounded-pill px-3 py-2 shadow-sm">
                                            <i class="fa-solid fa-xmark me-1"></i>Hết hàng
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Product Info Section -->
                        <div class="col-md-7">
                            <h2 class="fw-bold text-dark mb-2">@Model.TENSP</h2>
                            <div class="d-flex align-items-center gap-2 mb-4">
                                <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 rounded-pill px-3">
                                    <i class="fa-solid fa-layer-group me-1"></i>@Model.LOAI.TENLOAI
                                </span>
                                <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 rounded-pill px-3">
                                    <i class="fa-solid fa-copyright me-1"></i>@Model.THUONGHIEU.TENTH
                                </span>
                            </div>

                            <div class="row g-4 mb-4">
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded-3 border-start border-4 border-primary h-100">
                                        <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Giá bán</small>
                                        <div class="fw-bold text-primary fs-4">@string.Format("{0:N0} đ", Model.DONGIABAN)</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded-3 border-start border-4 border-secondary h-100">
                                        <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Giá nhập</small>
                                        <div class="fw-bold text-secondary fs-5">@string.Format("{0:N0} đ", Model.DONGIAMUA)</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded-3 h-100">
                                        <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Số lượng kho</small>
                                        <div class="fw-bold text-dark fs-5">@Model.SOLUONG</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded-3 h-100">
                                        <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.75rem;">Ngày cập nhật</small>
                                        <div class="fw-bold text-dark fs-5">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h5 class="fw-bold text-secondary border-bottom pb-2 mb-3">Mô Tả Sản Phẩm</h5>
                                <div class="text-muted bg-white p-3 rounded-3 border">
                                    @if (!string.IsNullOrEmpty(Model.MOTA))
                                    {
                                        @Html.Raw(Model.MOTA.Replace("\n", "<br>"))
                                    }
                                    else
                                    {
                                        <span class="fst-italic">Chưa có mô tả cho sản phẩm này.</span>
                                    }
                                </div>
                            </div>

                            <div class="d-flex gap-2 mt-auto">
                                <a href="@Url.Action("Edit", "SanPham", new { id = Model.MASP })" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm hover-scale">
                                    <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa
                                </a>
                                <a href="@Url.Action("Index", "SanPham")" class="btn btn-light rounded-pill px-4 fw-medium border">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>
