@model WebsiteThuCungBento.Models.SANPHAM

@{
    ViewBag.Title = "Cập Nhật Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning text-dark p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-50 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-pen-to-square fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Cập Nhật Sản Phẩm</h3>
                            <p class="mb-0 opacity-75">Chỉnh sửa thông tin sản phẩm #@Model.MASP</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MASP)
                        @Html.HiddenFor(model => model.HINHANH) <!-- Giữ lại tên ảnh cũ -->

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                Vui lòng kiểm tra lại thông tin nhập vào.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-5">
                            <!-- Image Upload Section -->
                            <div class="col-md-4">
                                <div class="text-center">
                                    <label class="form-label fw-medium text-secondary mb-3">Hình ảnh sản phẩm</label>
                                    <div class="position-relative d-inline-block mb-3 w-100">
                                        <div class="image-preview-container rounded-4 shadow-sm border border-2 border-dashed border-secondary bg-light d-flex align-items-center justify-content-center overflow-hidden" style="height: 300px;">
                                            <img id="imagePreview" src="@Url.Content("~/img/" + Model.HINHANH)" alt="Preview" class="w-100 h-100 object-fit-contain" />
                                        </div>
                                        <label for="fileUpload" class="btn btn-warning position-absolute bottom-0 end-0 m-3 rounded-circle p-3 shadow hover-scale" style="width: 50px; height: 50px; cursor: pointer;">
                                            <i class="fa-solid fa-camera"></i>
                                        </label>
                                    </div>
                                    <input type="file" id="fileUpload" name="fileUpload" class="d-none" accept="image/*" onchange="previewImage(this)" />
                                    <div class="form-text small">Nhấn vào icon máy ảnh để thay đổi ảnh mới.</div>
                                    @if (!string.IsNullOrEmpty(ViewBag.Thongbao))
                                    {
                                        <div class="text-danger small mt-2">@ViewBag.Thongbao</div>
                                    }
                                </div>
                            </div>

                            <!-- Form Fields Section -->
                            <div class="col-md-8">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Tên sản phẩm <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-box text-muted"></i></span>
                                            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập tên sản phẩm", @required = "required" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Đơn giá mua <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-money-bill-wave text-muted"></i></span>
                                            @Html.EditorFor(model => model.DONGIAMUA, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "0", @required = "required", @onkeypress = "return isNumberKey(event)" } })
                                            <span class="input-group-text bg-light">VNĐ</span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DONGIAMUA, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Đơn giá bán <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-tag text-muted"></i></span>
                                            @Html.EditorFor(model => model.DONGIABAN, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "0", @required = "required", @onkeypress = "return isNumberKey(event)" } })
                                            <span class="input-group-text bg-light">VNĐ</span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DONGIABAN, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Thương hiệu / Giống <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-copyright text-muted"></i></span>
                                            @Html.DropDownList("MATH", null, new { @class = "form-select border-start-0 ps-0" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Loại sản phẩm <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-layer-group text-muted"></i></span>
                                            @Html.DropDownList("MALOAI", null, new { @class = "form-select border-start-0 ps-0" })
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Mô tả sản phẩm <span class="text-danger">*</span></label>
                                        @Html.TextAreaFor(model => model.MOTA, new { @class = "form-control", @rows = "5", @placeholder = "Nhập mô tả chi tiết sản phẩm...", @required = "required" })
                                        @Html.ValidationMessageFor(model => model.MOTA, "", new { @class = "text-danger small mt-1" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("Index", "SanPham")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-save me-2"></i>Cập nhật
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: none;
        border-left: 1px solid #ffc107 !important;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #ffc107;
    }
    
    .input-group:focus-within .form-control, 
    .input-group:focus-within .form-select {
        border-left: none !important;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
    
    .object-fit-contain {
        object-fit: contain;
    }
</style>

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('imagePreview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
