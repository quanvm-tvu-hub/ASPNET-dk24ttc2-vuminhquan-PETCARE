@model IEnumerable<WebsiteThuCungBento.Models.ADMIN>

@{
    ViewBag.Title = "Quản lý Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h3 class="mb-0 fw-bold">
                <i class="fa-solid fa-user-shield text-primary me-2"></i>
                Quản Lý Tài Khoản Admin
            </h3>
            <p class="text-muted mb-0">Danh sách tất cả quản trị viên hệ thống</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i>
                Thêm Admin Mới
            </a>
        </div>
    </div>

    <!-- Admin Cards Grid -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card admin-card border-0 shadow-sm h-100">
                    <div class="card-body text-center p-4">
                        <!-- Avatar -->
                        <div class="admin-avatar-wrapper mb-3">
                            <img src="@Url.Content("~/img/" + item.AVATAR)" 
                                 alt="@item.HOTEN"
                                 class="admin-avatar">
                            <div class="admin-status-badge">
                                <i class="fa-solid fa-circle text-success"></i>
                            </div>
                        </div>

                        <!-- Info -->
                        <h5 class="fw-bold mb-1">@item.HOTEN</h5>
                        <p class="text-muted small mb-2">
                            <i class="fa-solid fa-at me-1"></i>
                            @item.TENDN
                        </p>
                        
                        <span class="badge bg-primary-subtle text-primary mb-3">
                            @item.TENLOAI
                        </span>

                        <!-- Contact Info -->
                        <div class="admin-contact-info mb-3">
                            <div class="contact-item">
                                <i class="fa-solid fa-envelope text-muted me-2"></i>
                                <small class="text-truncate">@item.EMAIL</small>
                            </div>
                            <div class="contact-item">
                                <i class="fa-solid fa-phone text-muted me-2"></i>
                                <small>@item.DIENTHOAI</small>
                            </div>
                            <div class="contact-item">
                                <i class="fa-solid fa-location-dot text-muted me-2"></i>
                                <small class="text-truncate">@item.DIACHI</small>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Edit", "Admin", new { id = item.MAADMIN })" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-pen-to-square me-1"></i>
                                Chỉnh sửa
                            </a>
                            <a href="@Url.Action("Delete", "Admin", new { id = item.MAADMIN })" 
                               class="btn btn-outline-danger btn-sm"
                               onclick="return confirm('Bạn có chắc muốn xóa admin này?')">
                                <i class="fa-solid fa-trash me-1"></i>
                                Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fa-solid fa-users-slash fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">Chưa có tài khoản admin nào</h4>
                        <p class="text-muted mb-4">Hãy thêm tài khoản admin đầu tiên</p>
                        <a href="@Url.Action("Create", "Admin")" class="btn btn-primary">
                            <i class="fa-solid fa-plus me-2"></i>
                            Thêm Admin Mới
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .admin-card {
        border-radius: 1rem;
        transition: all 0.3s ease;
    }

    .admin-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }

    .admin-avatar-wrapper {
        position: relative;
        display: inline-block;
    }

    .admin-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #f8fafc;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .admin-status-badge {
        position: absolute;
        bottom: 5px;
        right: 5px;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .admin-status-badge i {
        font-size: 0.7rem;
    }

    .admin-contact-info {
        text-align: left;
    }

    .contact-item {
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f1f5f9;
    }

    .contact-item:last-child {
        border-bottom: none;
    }

    .contact-item small {
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .bg-primary-subtle {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .text-primary {
        color: #0d6efd !important;
    }
</style>
