@model WebsiteThuCungBento.Models.ADMIN

@{
    ViewBag.Title = "Thêm Mới Quản Trị Viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-user-plus fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Thêm Mới Quản Trị Viên</h3>
                            <p class="mb-0 opacity-75">Tạo tài khoản quản trị viên mới cho hệ thống</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                Vui lòng kiểm tra lại thông tin nhập vào.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-5">
                            <!-- Avatar Upload Section -->
                            <div class="col-md-4">
                                <div class="text-center">
                                    <label class="form-label fw-medium text-secondary mb-3">Ảnh đại diện</label>
                                    <div class="position-relative d-inline-block mb-3 w-100">
                                        <div class="avatar-preview-container rounded-circle shadow-sm border border-2 border-dashed border-secondary bg-light d-flex align-items-center justify-content-center overflow-hidden mx-auto" style="width: 250px; height: 250px;">
                                            <img id="avatarPreview" src="https://placehold.co/250x250?text=Avatar" alt="Preview" class="w-100 h-100 object-fit-cover" />
                                        </div>
                                        <label for="fileUpload" class="btn btn-primary position-absolute bottom-0 end-0 m-3 rounded-circle p-3 shadow hover-scale" style="width: 50px; height: 50px; cursor: pointer; right: 15% !important;">
                                            <i class="fa-solid fa-camera"></i>
                                        </label>
                                    </div>
                                    <input type="file" id="fileUpload" name="fileUpload" class="d-none" accept="image/*" onchange="previewImage(this)" required />
                                    <div class="form-text small">Nhấn vào icon máy ảnh để tải ảnh lên.</div>
                                    @if (!string.IsNullOrEmpty(ViewBag.Thongbao))
                                    {
                                        <div class="text-danger small mt-2">@ViewBag.Thongbao</div>
                                    }
                                </div>
                            </div>

                            <!-- Form Fields Section -->
                            <div class="col-md-8">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Họ và Tên <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user text-muted"></i></span>
                                            @Html.TextBoxFor(model => model.HOTEN, new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập họ tên", @required = "required" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Số Điện Thoại <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-phone text-muted"></i></span>
                                            @Html.TextBoxFor(model => model.DIENTHOAI, new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập số điện thoại", @required = "required", @onkeypress = "return isNumberKey(event)" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Email <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                                            @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control border-start-0 ps-0", @type = "email", @placeholder = "Nhập địa chỉ email", @required = "required" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Tên Đăng Nhập <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-id-card text-muted"></i></span>
                                            @Html.TextBoxFor(model => model.TENDN, new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập tên đăng nhập", @required = "required" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TENDN, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Mật Khẩu <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-lock text-muted"></i></span>
                                            @Html.PasswordFor(model => model.MATKHAU, new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập mật khẩu", @required = "required", @minlength = "6" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Loại Tài Khoản <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user-tag text-muted"></i></span>
                                            @Html.TextBoxFor(model => model.TENLOAI, new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập loại tài khoản (VD: Quản trị viên)", @required = "required" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TENLOAI, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Địa Chỉ <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-location-dot text-muted"></i></span>
                                            @Html.TextAreaFor(model => model.DIACHI, new { @class = "form-control border-start-0 ps-0", @rows = "3", @placeholder = "Nhập địa chỉ liên hệ", @required = "required" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger small mt-1" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("listadmin", "Admin")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-plus me-2"></i>Tạo mới
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: none;
        border-left: 1px solid #0d6efd !important;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #0d6efd;
    }
    
    .input-group:focus-within .form-control {
        border-left: none !important;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
    
    .object-fit-cover {
        object-fit: cover;
    }
</style>

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('avatarPreview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
