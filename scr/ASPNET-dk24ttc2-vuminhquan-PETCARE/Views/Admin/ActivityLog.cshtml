@model WebsiteThuCungBento.ViewModels.ActivityLogListViewModel

@{
    ViewBag.Title = "Lịch Sử Hoạt Động";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-history"></i> Lịch Sử Hoạt Động</h2>
            <p class="text-muted">Theo dõi các hoạt động của admin</p>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("Dashboard")" class="btn btn-info">
                <i class="fas fa-chart-line"></i> Dashboard
            </a>
        </div>
    </div>

    <!-- Form lọc -->
    <div class="card mb-4">
        <div class="card-body">
            @using (Html.BeginForm("ActivityLog", "Admin", FormMethod.Get, new { @class = "form" }))
            {
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Admin</label>
                            @Html.DropDownListFor(m => m.AdminId, Model.AdminList, "-- Tất cả --", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Loại hoạt động</label>
                            @Html.TextBoxFor(m => m.LoaiHoatDong, new { @class = "form-control", placeholder = "Nhập loại hoạt động..." })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-search"></i> Tìm kiếm
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bảng log -->
    <div class="card">
        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Thời gian</th>
                            <th>Admin</th>
                            <th>Hoạt động</th>
                            <th>Mô tả</th>
                            <th>IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Logs != null && Model.Logs.Any())
                        {
                            foreach (var log in Model.Logs)
                            {
                                <tr>
                                    <td>
                                        <small>@log.NGAYTHUCHIEN.ToString("dd/MM/yyyy HH:mm:ss")</small>
                                    </td>
                                    <td><strong>@log.TenAdmin</strong></td>
                                    <td>
                                        <span class="badge badge-info">@log.LOAIHOATDONG</span>
                                    </td>
                                    <td>@log.MOTA</td>
                                    <td><code>@log.DIACHI_IP</code></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                                    <p class="text-muted">Chưa có hoạt động nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Phân trang -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("ActivityLog", new { 
                                    page = i,
                                    adminId = Model.AdminId,
                                    loaiHoatDong = Model.LoaiHoatDong
                                })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
