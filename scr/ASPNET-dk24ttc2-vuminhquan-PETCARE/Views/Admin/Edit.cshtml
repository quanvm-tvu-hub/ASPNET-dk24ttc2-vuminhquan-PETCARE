@model WebsiteThuCungBento.Models.ADMIN

@{
    ViewBag.Title = "Cập Nhật Thông Tin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (Model == null)
{
    <div class="alert alert-danger m-4">
        Không tìm thấy thông tin quản trị viên. <a href="@Url.Action("listadmin", "Admin")">Quay lại danh sách</a>
    </div>
    return;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="fa-solid fa-user-pen fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">Cập Nhật Thông Tin</h3>
                            <p class="mb-0 opacity-75">Chỉnh sửa thông tin quản trị viên @Model.TENDN</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MAADMIN)
                        @Html.HiddenFor(model => model.TENDN)
                        @Html.HiddenFor(model => model.MATKHAU)

                        if (!string.IsNullOrEmpty(ViewBag.Thongbao))
                        {
                            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                @ViewBag.Thongbao
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row g-4">
                            <!-- Avatar Section -->
                            <div class="col-md-4 text-center">
                                <div class="position-relative d-inline-block mb-3">
                                    <div class="avatar-preview-container rounded-circle shadow-sm border border-4 border-light">
                                        <img src="@Url.Content("~/img/" + Model.AVATAR)" 
                                             id="avatarPreview"
                                             class="w-100 h-100 object-fit-cover" 
                                             alt="Avatar Preview" />
                                    </div>
                                    <label for="fileUpload" class="btn btn-sm btn-primary position-absolute bottom-0 end-0 rounded-circle p-2 shadow-sm" style="width: 35px; height: 35px;">
                                        <i class="fa-solid fa-camera"></i>
                                    </label>
                                </div>
                                <input type="file" id="fileUpload" name="fileUpload" class="d-none" accept="image/*" onchange="previewImage(this)" />
                                <p class="text-muted small mb-0">Nhấn vào icon máy ảnh để thay đổi ảnh đại diện</p>
                                @Html.ValidationMessageFor(model => model.AVATAR, "", new { @class = "text-danger small" })
                            </div>

                            <!-- Form Fields -->
                            <div class="col-md-8">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Họ và tên</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user text-muted"></i></span>
                                            @Html.EditorFor(model => model.HOTEN, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập họ tên đầy đủ" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Số điện thoại</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-phone text-muted"></i></span>
                                            @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "0xxxxxxxxx", @onkeypress = "return isNumberKey(event)" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label fw-medium text-secondary">Loại tài khoản</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user-tag text-muted"></i></span>
                                            @Html.EditorFor(model => model.TENLOAI, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Ví dụ: Admin, Staff" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.TENLOAI, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "example@email.com" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger small mt-1" })
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-medium text-secondary">Địa chỉ</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-location-dot text-muted"></i></span>
                                            @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control border-start-0 ps-0", @placeholder = "Nhập địa chỉ liên hệ" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger small mt-1" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                            <a href="@Url.Action("listadmin", "Admin")" class="btn btn-light px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-preview-container {
        width: 150px;
        height: 150px;
        overflow: hidden;
        margin: 0 auto;
        background-color: #f8f9fa;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: none;
        border-left: 1px solid #86b7fe !important;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
    }
    
    .input-group:focus-within .form-control {
        border-left: none !important;
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: translateY(-2px);
    }
</style>

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('avatarPreview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
