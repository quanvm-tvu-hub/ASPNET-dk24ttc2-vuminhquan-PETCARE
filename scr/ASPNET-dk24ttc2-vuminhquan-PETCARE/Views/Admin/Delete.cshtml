@model WebsiteThuCungBento.Models.ADMIN

@{
    ViewBag.Title = "Xóa Quản Trị Viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white p-4 text-center border-0">
                    <div class="mb-3">
                        <i class="fa-solid fa-triangle-exclamation fa-3x shake-animation"></i>
                    </div>
                    <h3 class="fw-bold mb-1">Xác Nhận Xóa</h3>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác!</p>
                </div>
                
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="position-relative d-inline-block">
                            <img src="@Url.Content("~/img/" + Model.AVATAR)" 
                                 class="rounded-circle shadow-sm border border-4 border-white" 
                                 style="width: 120px; height: 120px; object-fit: cover;" 
                                 alt="@Model.HOTEN" />
                            <span class="position-absolute bottom-0 end-0 bg-danger text-white rounded-circle p-2 border border-2 border-white">
                                <i class="fa-solid fa-trash-can small"></i>
                            </span>
                        </div>
                        <h4 class="mt-3 fw-bold text-dark">@Model.HOTEN</h4>
                        <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill">
                            @Model.TENLOAI
                        </span>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-muted d-block mb-1">Tên đăng nhập</small>
                                <div class="fw-semibold text-dark">@Model.TENDN</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-muted d-block mb-1">Số điện thoại</small>
                                <div class="fw-semibold text-dark">@Model.DIENTHOAI</div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded-3">
                                <small class="text-muted d-block mb-1">Email</small>
                                <div class="fw-semibold text-dark">@Model.EMAIL</div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded-3">
                                <small class="text-muted d-block mb-1">Địa chỉ</small>
                                <div class="fw-semibold text-dark">@Model.DIACHI</div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 bg-warning-subtle text-warning-emphasis d-flex align-items-center" role="alert">
                        <i class="fa-solid fa-circle-info me-2"></i>
                        <div>
                            Bạn có chắc chắn muốn xóa tài khoản quản trị viên này?
                        </div>
                    </div>

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                            <a href="@Url.Action("listadmin", "Admin")" class="btn btn-light btn-lg px-4 rounded-pill fw-medium">
                                <i class="fa-solid fa-arrow-left me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4 rounded-pill fw-bold shadow-sm hover-scale">
                                <i class="fa-solid fa-trash-can me-2"></i>Xác nhận xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .shake-animation {
        animation: shake 0.5s infinite;
    }
    
    @@keyframes shake {
        0% { transform: rotate(0deg); }
        25% { transform: rotate(5deg); }
        50% { transform: rotate(0deg); }
        75% { transform: rotate(-5deg); }
        100% { transform: rotate(0deg); }
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: scale(1.05);
    }

    .bg-primary-subtle {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .bg-warning-subtle {
        background-color: rgba(255, 193, 7, 0.1);
    }
    
    .text-warning-emphasis {
        color: #664d03;
    }
</style>
