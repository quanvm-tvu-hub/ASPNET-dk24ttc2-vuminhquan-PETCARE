<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <!-- Admin Custom Styles -->
    <link href="~/Content/admin-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="logo">
                <i class="fa-solid fa-paw me-2"></i> Admin Panel
            </div>

            <div class="user-info text-center mb-4">
                @{ var ad = Session["Taikhoanadmin"] as WebsiteThuCungBento.Models.ADMIN;}
                @if (ad != null)
                {
                    <img src="@Url.Content("~/img/" + ad.AVATAR)" class="rounded-circle mb-2" style="width: 80px; height: 80px; object-fit: cover; border: 3px solid rgba(255,255,255,0.2);" />
                    <h4 style="font-size: 1.1rem; margin-bottom: 0.25rem;">@ad.HOTEN</h4>
                    <span style="font-size: 0.875rem; color: rgba(255,255,255,0.6);">@ad.EMAIL</span>
                }
            </div>

            <nav>
                <a href="@Url.Action("index","Admin")" class="admin-nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "index" ? "active" : "")">
                    <i class="fa-solid fa-house"></i> Trang chủ
                </a>
                <a href="@Url.Action("index","User")" class="admin-nav-item" target="_blank">
                    <i class="fa-solid fa-globe"></i> Xem trang web
                </a>

                <div style="margin-top: 1.5rem; margin-bottom: 0.5rem; font-size: 0.75rem; text-transform: uppercase; color: rgba(255,255,255,0.5); padding-left: 1rem;">Quản lý</div>

                <a href="@Url.Action("listadmin","Admin")" class="admin-nav-item">
                    <i class="fa-solid fa-user-shield"></i> Quản trị viên
                </a>
                <a href="@Url.Action("Index","KhachHang")" class="admin-nav-item">
                    <i class="fa-solid fa-users"></i> Khách hàng
                </a>
                <a href="@Url.Action("DSPhanQuyen","AdminPQ")" class="admin-nav-item">
                    <i class="fa-solid fa-user-lock"></i> Phân quyền
                </a>

                <div style="margin-top: 1.5rem; margin-bottom: 0.5rem; font-size: 0.75rem; text-transform: uppercase; color: rgba(255,255,255,0.5); padding-left: 1rem;">Kinh doanh</div>

                <a href="@Url.Action("DonDatHang","DonHang")" class="admin-nav-item">
                    <i class="fa-solid fa-file-invoice-dollar"></i> Đơn đặt hàng
                </a>
                <a href="@Url.Action("DonDKDV","DonHang")" class="admin-nav-item">
                    <i class="fa-solid fa-calendar-check"></i> Đơn dịch vụ
                </a>
                <a href="@Url.Action("Index","SanPham")" class="admin-nav-item">
                    <i class="fa-solid fa-box"></i> Sản phẩm / Thú cưng
                </a>
                <a href="@Url.Action("Index","KhoHang")" class="admin-nav-item">
                    <i class="fa-solid fa-warehouse"></i> Kho hàng
                </a>

                <div style="margin-top: 1.5rem; margin-bottom: 0.5rem; font-size: 0.75rem; text-transform: uppercase; color: rgba(255,255,255,0.5); padding-left: 1rem;">Danh mục</div>

                <a href="@Url.Action("Index","ThuongHieu")" class="admin-nav-item">
                    <i class="fa-solid fa-tag"></i> Thương hiệu / Giống
                </a>
                <a href="@Url.Action("Index","Loai")" class="admin-nav-item">
                    <i class="fa-solid fa-layer-group"></i> Loại sản phẩm
                </a>
                <a href="@Url.Action("Index","ThongKe")" class="admin-nav-item">
                    <i class="fa-solid fa-chart-line"></i> Thống kê
                </a>

                <div style="margin-top: 2rem;">
                    <a href="@Url.Action("dangxuat","Admin")" class="admin-nav-item" style="color: #ef4444;">
                        <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                    </a>
                </div>
            </nav>
        </aside>
        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>