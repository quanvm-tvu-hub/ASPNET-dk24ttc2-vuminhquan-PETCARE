<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Bento Pet Shop</title>
    <link rel="shortcut icon" href="~/img/logo/pet2.png" type="image/png" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Custom Theme -->
    <link href="~/Content/modern-theme.css" rel="stylesheet" />
    
    <!-- Plugins -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.theme.min.css" />
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js"></script>
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span class="me-3"><i class="fa-solid fa-phone me-2"></i> 0908943407</span>
                    <span><i class="fa-solid fa-envelope me-2"></i> quanvm007@gmail.com</span>
                </div>
                <div class="col-md-6 text-end">
                    @if (Session["Taikhoan"] != null)
                    {
                        var kh = Session["Taikhoan"] as WebsiteThuCungBento.Models.KHACHHANG;
                        <span class="me-3">Xin chào, <strong>@kh.HOTENKH</strong></span>
                        <a href="@Url.Action("thongtincanhan","User")" class="me-3">Hồ sơ</a>
                        <a href="@Url.Action("dangxuat","User")">Đăng xuất</a>
                    }
                    else
                    {
                        <a href="@Url.Action("dangnhap","User")" class="me-3"><i class="fa fa-user me-1"></i> Đăng nhập</a>
                        <a href="@Url.Action("dangky","User")"><i class="fa fa-sign-in me-1"></i> Đăng ký</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
        <div class="container">
            <div class="row align-items-center">
                <!-- Logo -->
                <div class="col-md-2">
                    <a href="/" class="logo">
                        <img src="~/img/logo/pet2.png" alt="Bento Pet Shop">
                    </a>
                </div>

                <!-- Navigation -->
                <div class="col-md-7">
                    <nav class="nav-menu d-none d-lg-flex justify-content-center">
                        <a href="@Url.Action("Index", "User")" class="nav-link">TRANG CHỦ</a>
                        <a href="@Url.Action("gioithieu","User")" class="nav-link">GIỚI THIỆU</a>
                        <a href="@Url.Action("sanpham","User")" class="nav-link">SẢN PHẨM</a>
                        <a href="@Url.Action("khachsanthucung","User")" class="nav-link">PET HOTEL</a>
                        <a href="@Url.Action("spathucung","User")" class="nav-link">DỊCH VỤ SPA</a>
                    </nav>
                </div>

                <!-- Actions -->
                <div class="col-md-3 text-end">
                    <a href="@Url.Action("Giohang", "Giohang")" class="btn btn-outline-primary position-relative">
                        <i class="fa-solid fa-cart-shopping me-2"></i> Giỏ hàng
                        @if (Session["giohang"] != null)
                        {
                            var cart = (List<WebsiteThuCungBento.Models.Giohang>)Session["giohang"];
                            if (cart.Count > 0)
                            {
                                <span class="cart-badge">@cart.Count</span>
                            }
                        }
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main style="min-height: 60vh;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="modern-footer">
        <!-- Wave Decoration -->
        <div class="footer-wave">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
            </svg>
        </div>

        <div class="container py-5">
            <div class="row g-4">
                <!-- Brand Section -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-brand">
                        <div class="d-flex align-items-center mb-3">
                            <img src="~/img/logo/pet2.png" alt="Logo" style="height: 50px;" class="me-3">
                            <h3 class="text-white mb-0 fw-bold">Bento Pet Shop</h3>
                        </div>
                        <p class="text-white-50 mb-4">
                            Chúng tôi cam kết mang đến những dịch vụ và sản phẩm chất lượng cao nhất cho thú cưng của bạn. 
                            Với đội ngũ chuyên nghiệp và tận tâm, chúng tôi luôn đặt sự hài lòng của khách hàng lên hàng đầu.
                        </p>
                        <div class="social-links-modern">
                            <a href="#" class="social-btn-modern"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="social-btn-modern"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="social-btn-modern"><i class="fab fa-tiktok"></i></a>
                            <a href="#" class="social-btn-modern"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-title">Liên Kết</h5>
                    <ul class="footer-menu">
                        <li><a href="@Url.Action("Index", "User")"><i class="fa-solid fa-chevron-right me-2"></i>Trang chủ</a></li>
                        <li><a href="@Url.Action("gioithieu", "User")"><i class="fa-solid fa-chevron-right me-2"></i>Giới thiệu</a></li>
                        <li><a href="@Url.Action("sanpham", "User")"><i class="fa-solid fa-chevron-right me-2"></i>Sản phẩm</a></li>
                    </ul>
                </div>

                <!-- Services -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="footer-title">Dịch Vụ</h5>
                    <ul class="footer-menu">
                        <li><a href="@Url.Action("khachsanthucung", "User")"><i class="fa-solid fa-chevron-right me-2"></i>Khách sạn thú cưng</a></li>
                        <li><a href="@Url.Action("spathucung", "User")"><i class="fa-solid fa-chevron-right me-2"></i>Spa & Grooming</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="footer-title">Liên Hệ</h5>
                    <div class="footer-contact">
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fa-solid fa-location-dot"></i>
                            </div>
                            <div class="contact-text">
                                <span>Gò Vấp, TP.HCM</span>
                            </div>
                        </div>
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fa-solid fa-phone"></i>
                            </div>
                            <div class="contact-text">
                                <span>0908943407</span>
                            </div>
                        </div>
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fa-solid fa-envelope"></i>
                            </div>
                            <div class="contact-text">
                                <span>quanvm007@gmail.com</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="footer-bottom mt-5 pt-4">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0 text-white-50">&copy; 2025 Bento Pet Shop. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <p class="mb-0 text-white-50">Designed by <span class="text-warning fw-bold">Vũ Minh Quân</span></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        $(document).ready(function() {
            $("#owl-brands-slider").owlCarousel({
                autoPlay: 3000,
                items : 5,
                itemsDesktop : [1199,3],
                itemsDesktopSmall : [979,3]
            });
        });
    </script>
</body>
</html>
